@section Scripts {
    <script>
        function renderMenuList(menuItems) {
            const menuList = document.getElementById('menuList');
            menuList.innerHTML = menuItems.map(item => `
                <div class="col-md-6 col-lg-4 h-100">
                    <div class="menu-card h-100">
                        <img src="${item.imageUrl || item.thumbnailUrl || '/assets/images/default.png'}" alt="${item.productName}" class="menu-img">
                        <div class="menu-content">
                            <h3>${item.productName}</h3>
                            <div class="menu-info">${item.shortDescription || ''}</div>
                            <div class="menu-price">${item.price.toLocaleString()} đ</div>
                            <button class="btn btn-order" data-product-id="${item.productID}" data-bs-toggle="modal" data-bs-target="#orderOptionsModal">Đặt Hàng</button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Lấy danh sách combo từ API
        fetch('/Menu/GetCombos')
            .then(res => res.json())
            .then(data => {
                renderMenuList(data);
            })
            .catch(err => {
                document.getElementById('menuList').innerHTML = '<div class="text-danger">Không thể tải danh sách combo!</div>';
            });

        // Render động các nhóm cấu hình và option vào modal
        function renderComboOptions(combo) {
            const form = document.getElementById('orderOptionsForm');
            if (!combo || !combo.groups || combo.groups.length === 0) {
                form.innerHTML = '<div class="text-danger">Không có tùy chọn cho combo này.</div>';
                return;
            }
            let html = '';
            combo.groups.forEach((group, groupIdx) => {
                html += `<div class="mb-3">
                    <label class="form-label fw-bold">${group.groupName}</label>
                    <div>`;
                group.options.forEach((option, optIdx) => {
                    const inputId = `group${group.configGroupID}-option${option.configOptionID}`;
                    const checked = option.isDefault || optIdx === 0 ? 'checked' : '';
                    html += `
                        <input type="radio" class="btn-check" name="group${group.configGroupID}" id="${inputId}" autocomplete="off" ${checked} data-price="${option.priceAdjustment || 0}">
                        <label class="btn btn-outline-danger mb-2" for="${inputId}">
                            ${option.productImage ? `<img src="${option.productImage}" alt="${option.productName}" width="50">` : ''}
                            ${option.productName}
                            ${option.variantName ? `(${option.variantName})` : ''}
                            ${option.priceAdjustment && option.priceAdjustment > 0 ? `(+${option.priceAdjustment.toLocaleString()}đ)` : ''}
                        </label>`;
                });
                html += '</div></div>';
            });
            // Số lượng
            html += `<div class="mb-3">
                <label class="form-label fw-bold">Số lượng</label>
                <div class="input-group" style="max-width: 150px;">
                  <button class="btn btn-outline-secondary" type="button" id="qtyMinus">-</button>
                  <input type="number" class="form-control text-center" id="orderQty" value="1" min="1">
                  <button class="btn btn-outline-secondary" type="button" id="qtyPlus">+</button>
                </div>
              </div>`;
            // Tổng giá
            html += `<div class="mb-3">
                <label class="form-label fw-bold">Tổng giá:</label>
                <div id="comboTotalPrice" class="fs-4 text-danger"></div>
            </div>`;
            form.innerHTML = html;

            // Hàm tính tổng giá
            function calculateTotalPrice() {
                let total = combo.basePrice || combo.BasePrice || 0;
                combo.groups.forEach((group) => {
                    const checked = document.querySelector(`input[name='group${group.configGroupID}']:checked`);
                    if (checked) {
                        total += parseInt(checked.getAttribute('data-price') || '0');
                    }
                });
                const qty = parseInt(document.getElementById('orderQty').value) || 1;
                document.getElementById('comboTotalPrice').innerText = (total * qty).toLocaleString() + ' đ';
            }
            // Gọi khi render lần đầu
            calculateTotalPrice();
            // Lắng nghe thay đổi option và số lượng
            form.querySelectorAll('input[type=radio]').forEach(el => {
                el.addEventListener('change', calculateTotalPrice);
            });
            form.querySelector('#orderQty').addEventListener('input', calculateTotalPrice);
        }

        // Lắng nghe sự kiện bấm Đặt Hàng để load option động
        document.addEventListener('click', function(e) {
            if (e.target && e.target.classList.contains('btn-order')) {
                const productId = e.target.getAttribute('data-product-id');
                const productName = e.target.closest('.menu-card').querySelector('h3').textContent;
                
                // Lưu trữ thông tin combo hiện tại
                window.currentComboId = productId;
                window.currentComboName = productName;
                
                // Reset modal về trạng thái ban đầu
                resetModalToInitialState();
                
                fetch(`/Menu/GetComboOptions?productId=${productId}`)
                    .then(res => res.json())
                    .then(data => {
                        // Lưu trữ dữ liệu combo để sử dụng sau
                        window.currentCombo = data;
                        renderComboOptions(data);
                    })
                    .catch(err => {
                        document.getElementById('orderOptionsForm').innerHTML = '<div class="text-danger">Không thể tải tùy chọn combo!</div>';
                    });
            }
        });

        // Hàm reset modal về trạng thái ban đầu
        function resetModalToInitialState() {
            // Reset modal body về form ban đầu
            const modalBody = document.querySelector('.modal-body');
            modalBody.innerHTML = '<form id="orderOptionsForm"><div class="text-center"><i class="fas fa-spinner fa-spin"></i> Đang tải tùy chọn...</div></form>';
            
            // Reset modal footer về nút ban đầu
            const modalFooter = document.querySelector('.modal-footer');
            modalFooter.innerHTML = `
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" id="addToCartBtn">Thêm vào giỏ hàng</button>
            `;
            
            // Reset modal title
            const modalTitle = document.querySelector('.modal-title');
            if (modalTitle) {
                modalTitle.textContent = 'Tùy chọn combo';
            }
        }

        // Reset modal khi modal được đóng
        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById('orderOptionsModal');
            if (modal) {
                modal.addEventListener('hidden.bs.modal', function() {
                    // Reset modal về trạng thái ban đầu khi đóng
                    resetModalToInitialState();
                });
            }
        });

        // Quantity plus/minus logic for modal (gắn lại sau khi render)
        document.addEventListener('click', function(e) {
            if (e.target && e.target.id === 'qtyMinus') {
                const qtyInput = document.getElementById('orderQty');
                let val = parseInt(qtyInput.value);
                if (val > 1) qtyInput.value = val - 1;
                qtyInput.dispatchEvent(new Event('input'));
            }
            if (e.target && e.target.id === 'qtyPlus') {
                const qtyInput = document.getElementById('orderQty');
                let val = parseInt(qtyInput.value);
                qtyInput.value = val + 1;
                qtyInput.dispatchEvent(new Event('input'));
            }
        });

        // Xử lý nút "Thêm vào giỏ hàng"
        document.addEventListener('click', function(e) {
            if (e.target && e.target.id === 'addToCartBtn') {
                const form = document.getElementById('orderOptionsForm');
                const qty = parseInt(document.getElementById('orderQty').value) || 1;
                
                // Thu thập tất cả thông tin đã chọn
                const selectedOptions = {};
                let totalPrice = 0;
                
                // Lấy thông tin combo hiện tại (cần lưu trữ khi load)
                if (window.currentCombo) {
                    totalPrice = window.currentCombo.basePrice || window.currentCombo.BasePrice || 0;
                    
                    window.currentCombo.groups.forEach((group) => {
                        const checked = document.querySelector(`input[name='group${group.configGroupID}']:checked`);
                        if (checked) {
                            const optionId = checked.id;
                            const optionName = checked.nextElementSibling.textContent.trim();
                            const priceAdjustment = parseInt(checked.getAttribute('data-price') || '0');
                            
                            selectedOptions[group.groupName] = {
                                optionId: optionId,
                                optionName: optionName,
                                priceAdjustment: priceAdjustment
                            };
                            
                            totalPrice += priceAdjustment;
                        }
                    });
                }
                
                const orderData = {
                    comboId: window.currentComboId,
                    comboName: window.currentComboName,
                    selectedOptions: selectedOptions,
                    quantity: qty,
                    totalPrice: totalPrice * qty,
                    basePrice: totalPrice
                };
                
                // Hiển thị thông tin trong console
                console.log('=== THÔNG TIN ĐƠN HÀNG ===');
                console.log('Combo ID:', orderData.comboId);
                console.log('Tên Combo:', orderData.comboName);
                console.log('Số lượng:', orderData.quantity);
                console.log('Giá cơ bản:', orderData.basePrice.toLocaleString() + ' đ');
                console.log('Tổng giá:', orderData.totalPrice.toLocaleString() + ' đ');
                console.log('Các tùy chọn đã chọn:');
                Object.keys(orderData.selectedOptions).forEach(groupName => {
                    const option = orderData.selectedOptions[groupName];
                    console.log(`  - ${groupName}: ${option.optionName} ${option.priceAdjustment > 0 ? `(+${option.priceAdjustment.toLocaleString()}đ)` : ''}`);
                });
                console.log('========================');
                
                // Hiển thị thông báo thành công và nút kiểm tra giỏ hàng
                const modalBody = document.querySelector('.modal-body');
                modalBody.innerHTML = `
                    <div class="text-center py-4">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="text-success mb-3">✅ Đã thêm vào giỏ hàng thành công!</h4>
                        <div class="alert alert-success">
                            <h5>🍔 ${orderData.comboName}</h5>
                            <p class="mb-2">📦 Số lượng: ${orderData.quantity}</p>
                            <p class="mb-2">💰 Giá: ${orderData.totalPrice.toLocaleString()} đ</p>
                            <div class="text-start">
                                <small class="text-muted">📋 Các tùy chọn đã chọn:</small>
                                <ul class="list-unstyled ms-3">
                                    ${Object.keys(orderData.selectedOptions).map(groupName => {
                                        const option = orderData.selectedOptions[groupName];
                                        return `<li>• ${groupName}: ${option.optionName}${option.priceAdjustment > 0 ? ` (+${option.priceAdjustment.toLocaleString()}đ)` : ''}</li>`;
                                    }).join('')}
                                </ul>
                            </div>
                        </div>
                    </div>
                `;
                
                // Thay đổi nút footer
                const modalFooter = document.querySelector('.modal-footer');
                modalFooter.innerHTML = `
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tiếp tục mua sắm</button>
                    <a href="/Cart" class="btn btn-success">
                        <i class="fas fa-shopping-cart me-2"></i>
                        Kiểm tra giỏ hàng
                    </a>
                `;
                
                // Lưu vào localStorage để hiển thị trong giỏ hàng
                const cartItem = {
                    ProductID: orderData.comboId,
                    ProductNameSnapshot: orderData.comboName,
                    UnitPrice: orderData.basePrice,
                    Quantity: orderData.quantity,
                    Subtotal: orderData.totalPrice,
                    SelectedConfigurationSnapshot: JSON.stringify(orderData.selectedOptions),
                    // Thêm timestamp để tránh trùng lặp
                    timestamp: new Date().getTime()
                };
                
                // Lấy giỏ hàng hiện tại từ localStorage
                let cart = JSON.parse(localStorage.getItem('cart')) || [];
                console.log('Giỏ hàng hiện tại trước khi thêm:', cart);
                
                cart.push(cartItem);
                localStorage.setItem('cart', JSON.stringify(cart));
                
                console.log('Đã lưu vào giỏ hàng:', cartItem);
                console.log('Tổng số món trong giỏ hàng sau khi thêm:', cart.length);
                console.log('localStorage cart sau khi lưu:', localStorage.getItem('cart'));
                
                // Kiểm tra ngay lập tức xem có lưu được không
                setTimeout(() => {
                    const savedCart = JSON.parse(localStorage.getItem('cart')) || [];
                    console.log('Kiểm tra localStorage sau 1 giây:', savedCart);
                }, 1000);
            }
        });
    </script>
