    function showGlobalDropdown(e) {
        e.preventDefault();
        var btn = document.getElementById('menuDropdownToggle');
        var rect = btn.getBoundingClientRect();
        var dropdown = document.getElementById('globalMenuDropdown');
        var dropdownWidth = dropdown.offsetWidth || 900;
        var left = rect.left + rect.width/2 - dropdownWidth/2;
        left = Math.max(12, Math.min(left, window.innerWidth - dropdownWidth - 12));
        dropdown.style.display = 'flex';
        dropdown.style.left = left + 'px';
        dropdown.style.top = (rect.bottom + window.scrollY + 8) + 'px';
        dropdown.style.minWidth = dropdownWidth + 'px';
        dropdown.style.zIndex = 99999;
    }
    document.addEventListener('click', function(e) {
        var dropdown = document.getElementById('globalMenuDropdown');
        var btn = document.getElementById('menuDropdownToggle');
        if (!dropdown.contains(e.target) && !btn.contains(e.target)) {
            dropdown.style.display = 'none';
        }
    });
    </script>
