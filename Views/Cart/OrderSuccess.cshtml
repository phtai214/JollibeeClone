@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center" style="padding: 60px 20px;">
    <div class="success-icon" style="font-size: 72px; color: #28a745; margin-bottom: 30px;">
        <i class="fas fa-check-circle"></i>
    </div>
    
    <h1 style="color: #28a745; margin-bottom: 20px;">Đặt hàng thành công!</h1>
    
    <p style="font-size: 18px; color: #666; margin-bottom: 30px;">
        Cảm ơn bạn đã đặt hàng. Chúng tôi sẽ liên hệ với bạn sớm nhất để xác nhận đơn hàng.
    </p>
    
    <div style="margin: 40px 0;">
        <a href="/" class="btn btn-primary" style="margin-right: 15px; padding: 12px 30px;">
            Tiếp tục mua sắm
        </a>
        <a href="/Account/Profile" class="btn btn-outline-secondary" style="padding: 12px 30px;">
            Xem đơn hàng
        </a>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" style="margin-top: 20px;">
            @TempData["SuccessMessage"]
        </div>
    }
</div> 