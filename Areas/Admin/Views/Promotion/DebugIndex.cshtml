@{
    ViewData["Title"] = "Debug Promotion System";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-bug"></i> Debug Information - Promotion System</h3>
                </div>
                <div class="card-body">
                    <h5>System Status:</h5>
                    <ul class="list-group">
                        @foreach (var info in ViewBag.DebugInfo as List<string>)
                        {
                            <li class="list-group-item 
                                @(info.Contains("error") || info.Contains("Error") ? "list-group-item-danger" : 
                                  info.Contains("accessible") || info.Contains("True") ? "list-group-item-success" : 
                                  "list-group-item-warning")">
                                @info
                            </li>
                        }
                    </ul>

                    <div class="mt-4">
                        <h5>Quick Actions:</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Database Setup</h6>
                                        <p class="card-text">If you see database connection errors, try these commands:</p>
                                        <div class="bg-dark text-white p-3 rounded">
                                            <code>
                                                dotnet ef database update<br>
                                                dotnet ef migrations add InitialCreate (if no migrations exist)
                                            </code>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h6 class="card-title">Sample Data</h6>
                                        <p class="card-text">Create sample data to test the system:</p>
                                        <a href="@Url.Action("CreateSampleData")" class="btn btn-primary">
                                            <i class="fas fa-plus"></i> Create Sample Data
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>Navigation:</h5>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                                <i class="fas fa-list"></i> Back to Promotions
                            </a>
                            <a href="@Url.Action("Create")" class="btn btn-outline-success">
                                <i class="fas fa-plus"></i> Create Promotion
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .list-group-item-success {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }
    
    .list-group-item-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
    
    .list-group-item-warning {
        background-color: #fff3cd;
        border-color: #ffeaa7;
        color: #856404;
    }
</style> 

