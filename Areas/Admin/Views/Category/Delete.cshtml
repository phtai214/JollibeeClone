@model JollibeeClone.Areas.Admin.Models.Categories

@{
    ViewData["Title"] = "Xóa danh mục";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category-admin.css" asp-append-version="true" />
}

<div class="delete-category">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-trash text-danger me-2"></i>
                Xóa danh mục
            </h2>
            <p class="text-muted">Xác nhận xóa danh mục: <strong class="text-danger">@Model.CategoryName</strong></p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Cảnh báo -->
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Cảnh báo!</strong> Hành động này không thể hoàn tác. Danh mục sẽ bị xóa vĩnh viễn khỏi hệ thống.
    </div>

    <!-- Kiểm tra ràng buộc -->
    @if ((Model.Products != null && Model.Products.Any()) || (Model.SubCategories != null && Model.SubCategories.Any()))
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-ban me-2"></i>
            <strong>Không thể xóa!</strong> Danh mục này có chứa:
            <ul class="mb-0 mt-2">
                @if (Model.Products != null && Model.Products.Any())
                {
                    <li>@Model.Products.Count() sản phẩm</li>
                }
                @if (Model.SubCategories != null && Model.SubCategories.Any())
                {
                    <li>@Model.SubCategories.Count() danh mục con</li>
                }
            </ul>
            <p class="mt-2 mb-0">Vui lòng chuyển hoặc xóa các mục này trước khi xóa danh mục.</p>
        </div>
    }

    <!-- Thông tin danh mục sẽ bị xóa -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin danh mục sẽ bị xóa
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID danh mục:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryID)</dd>

                        <dt class="col-sm-3">Tên danh mục:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-3">Mô tả:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        }

                        <dt class="col-sm-3">Danh mục cha:</dt>
                        <dd class="col-sm-9">
                            @if (Model.ParentCategoryID.HasValue && Model.ParentCategory != null)
                            {
                                <span class="badge bg-secondary">@Html.DisplayFor(model => model.ParentCategory.CategoryName)</span>
                            }
                            else
                            {
                                <span class="text-muted">Danh mục gốc</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Số thứ tự:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DisplayOrder)</dd>

                        <dt class="col-sm-3">Số sản phẩm:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@(Model.Products?.Count() ?? 0) sản phẩm</span>
                        </dd>

                        <dt class="col-sm-3">Số danh mục con:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@(Model.SubCategories?.Count() ?? 0) danh mục con</span>
                        </dd>
                    </dl>

                    <hr>

                    <!-- Form xác nhận xóa -->
                    @if ((Model.Products == null || !Model.Products.Any()) && (Model.SubCategories == null || !Model.SubCategories.Any()))
                    {
                        <form asp-action="Delete" method="post">
                            <input asp-for="CategoryID" type="hidden" />
                            @Html.AntiForgeryToken()
                            
                            <div class="delete-confirmation mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                    <label class="form-check-label" for="confirmDelete">
                                        Tôi hiểu rằng hành động này không thể hoàn tác và đồng ý xóa danh mục này.
                                    </label>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn" disabled>
                                    <i class="fas fa-trash me-2"></i>
                                    Xác nhận xóa danh mục
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>
                                    Hủy
                                </a>
                                <a href="@Url.Action("Edit", new { id = Model.CategoryID })" class="btn btn-warning btn-lg">
                                    <i class="fas fa-edit me-2"></i>
                                    Chỉnh sửa thay vì xóa
                                </a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center">
                            <p class="text-danger mb-3">
                                <i class="fas fa-ban me-2"></i>
                                Không thể xóa danh mục này vì có chứa dữ liệu.
                            </p>
                            <div class="form-actions">
                                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    Quay lại danh sách
                                </a>
                                <a href="@Url.Action("Edit", new { id = Model.CategoryID })" class="btn btn-warning btn-lg">
                                    <i class="fas fa-edit me-2"></i>
                                    Chỉnh sửa danh mục
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Danh sách sản phẩm trong danh mục -->
            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-hamburger me-2"></i>
                            Sản phẩm trong danh mục (@Model.Products.Count())
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-warning mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Các sản phẩm này sẽ cần được chuyển sang danh mục khác trước khi xóa:
                        </p>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products.Take(5))
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td>@product.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Product", new { id = product.ProductID })" class="btn btn-sm btn-outline-warning">
                                                    Chuyển danh mục
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Products.Count() > 5)
                        {
                            <p class="text-muted">... và @(Model.Products.Count() - 5) sản phẩm khác</p>
                        }
                    </div>
                </div>
            }

            <!-- Danh sách danh mục con -->
            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-sitemap me-2"></i>
                            Danh mục con (@Model.SubCategories.Count())
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-warning mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Các danh mục con này cần được xử lý trước:
                        </p>
                        <div class="row">
                            @foreach (var subCategory in Model.SubCategories)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="sub-category-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@subCategory.CategoryName</h6>
                                            <div>
                                                <a href="@Url.Action("Edit", new { id = subCategory.CategoryID })" class="btn btn-sm btn-outline-warning">
                                                    Chỉnh sửa
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = subCategory.CategoryID })" class="btn btn-sm btn-outline-danger">
                                                    Xóa
                                                </a>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(subCategory.Description))
                                        {
                                            <p class="text-muted small mb-0 mt-2">@subCategory.Description</p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Ảnh danh mục -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh danh mục
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.CategoryName" class="img-fluid rounded shadow-sm" style="max-height: 250px;" />
                    }
                    else
                    {
                        <div class="no-image">
                            <i class="fas fa-folder" style="font-size: 4rem; color: #ddd;"></i>
                            <p class="text-muted mt-2">Không có ảnh</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Cảnh báo liên quan -->
            <div class="card mt-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Lưu ý quan trọng
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Danh mục sẽ bị xóa vĩnh viễn khỏi hệ thống</li>
                        <li>Hình ảnh liên quan cũng sẽ bị xóa</li>
                        <li>Không thể xóa nếu có sản phẩm hoặc danh mục con</li>
                        <li>Thông tin thống kê sẽ bị ảnh hưởng</li>
                        <li>Hành động này không thể hoàn tác</li>
                    </ul>
                </div>
            </div>

            <!-- Gợi ý thay thế -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Gợi ý thay thế
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>Thay vì xóa, bạn có thể:</strong></p>
                    <ul class="mb-0">
                        <li>Chuyển sản phẩm sang danh mục khác</li>
                        <li>Gộp danh mục con vào danh mục cha</li>
                        <li>Chỉnh sửa thông tin để phù hợp hơn</li>
                        <li>Thay đổi thứ tự hiển thị</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Enable/disable delete button based on confirmation checkbox
    $('#confirmDelete').on('change', function() {
        $('#deleteBtn').prop('disabled', !this.checked);
    });

    // Confirmation before actual deletion
    $('form').on('submit', function(e) {
        if (!$('#confirmDelete').is(':checked')) {
            e.preventDefault();
            alert('Vui lòng xác nhận bằng cách đánh dấu vào ô checkbox!');
            return false;
        }

        var confirmed = confirm('Bạn có chắc chắn muốn xóa danh mục "' + '@Model.CategoryName' + '"?\n\nHành động này không thể hoàn tác!');
        if (!confirmed) {
            e.preventDefault();
            return false;
        }

        // Show loading state
        var submitBtn = $('#deleteBtn');
        var originalText = submitBtn.html();
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xóa...');
        
        // Don't reset on timeout since this is deletion
    });
});
</script>
} 