@section Scripts {
<script>
$(document).ready(function() {
    let currentView = 'grid';
    
    // View Toggle
    $('.view-btn').on('click', function() {
        const view = $(this).data('view');
        if (view === currentView) return;
        
        $('.view-btn').removeClass('active');
        $(this).addClass('active');
        
        if (view === 'grid') {
            $('#tableView').hide();
            $('#gridView').show();
            currentView = 'grid';
        } else {
            $('#gridView').hide();
            $('#tableView').show();
            currentView = 'list';
        }
    });
    
    // Search functionality
    $('#searchInput').on('input', function() {
        filterCategories();
    });

    // Status filter
    $('#statusFilter').on('change', function() {
        filterCategories();
    });

    // Parent type filter
    $('#parentFilter').on('change', function() {
        filterCategories();
    });
    
    // Sort functionality
    $('#sortBy').on('change', function() {
        sortCategories();
    });

    function filterCategories() {
        var searchTerm = $('#searchInput').val().toLowerCase();
        var statusFilter = $('#statusFilter').val();
        var parentFilter = $('#parentFilter').val();
        var visibleCount = 0;

        $('.category-item').each(function() {
            var item = $(this);
            var name = item.data('name');
            var status = item.data('status').toString();
            var type = item.data('type');

            var showItem = true;

            // Check search term
            if (searchTerm && name.indexOf(searchTerm) === -1) {
                showItem = false;
            }

            // Check status filter
            if (statusFilter && status !== statusFilter) {
                showItem = false;
            }

            // Check type filter
            if (parentFilter && type !== parentFilter) {
                showItem = false;
            }

            if (showItem) {
                item.removeClass('hidden').show();
                visibleCount++;
            } else {
                item.addClass('hidden').hide();
            }
        });
        
        // Update result count
        $('#categoryCount').text(visibleCount);
    }
    
    function sortCategories() {
        var sortBy = $('#sortBy').val();
        var container = currentView === 'grid' ? $('#categoryGrid') : $('#categoryTableBody');
        var items = container.find('.category-item');
        
        items.sort(function(a, b) {
            var aVal, bVal;
            
            switch(sortBy) {
                case 'name':
                    aVal = $(a).data('name');
                    bVal = $(b).data('name');
                    return aVal.localeCompare(bVal);
                    
                case 'name-desc':
                    aVal = $(a).data('name');
                    bVal = $(b).data('name');
                    return bVal.localeCompare(aVal);
                    
                case 'order':
                    // Find display order from badge content
                    var aBadgeText = $(a).find('.badge').filter(function() {
                        var text = $(this).text();
                        return text.indexOf('Thá»© tá»±') !== -1 || !isNaN(text);
                    }).first().text();
                    var bBadgeText = $(b).find('.badge').filter(function() {
                        var text = $(this).text();
                        return text.indexOf('Thá»© tá»±') !== -1 || !isNaN(text);
                    }).first().text();
                    
                    aVal = parseInt(aBadgeText.replace(/[^0-9]/g, '')) || 0;
                    bVal = parseInt(bBadgeText.replace(/[^0-9]/g, '')) || 0;
                    return aVal - bVal;
                    
                case 'created':
                    // Default order (newest first)
                    return 0;
                    
                default:
                    return 0;
            }
        });
        
        container.html(items);
    }
});
</script>
