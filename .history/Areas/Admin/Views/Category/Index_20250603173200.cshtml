@model JollibeeClone.Areas.Admin.Models.PaginatedList<JollibeeClone.Areas.Admin.Models.Categories>

@{
    ViewData["Title"] = "Quản lý danh mục";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category-admin.css" asp-append-version="true" />
}

<div class="category-management">
    <!-- Header với nút thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-list text-jollibee-red me-2"></i>
                Quản lý danh mục
            </h2>
            <p class="text-muted">Quản lý tất cả danh mục sản phẩm của cửa hàng</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>
            Thêm danh mục mới
        </a>
    </div>

    <!-- Filters and Controls -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row align-items-end">
                    <!-- Search -->
                    <div class="col-md-3 mb-3">
                        <label for="searchString" class="form-label">Tìm kiếm danh mục</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-search"></i>
                            </span>
                            <input name="searchString" value="@ViewData["CurrentFilter"]" type="text" class="form-control" placeholder="Tên danh mục, mô tả..." />
                        </div>
                    </div>

                    <!-- Sort -->
                    <div class="col-md-3 mb-3">
                        <label for="sortOrder" class="form-label">Sắp xếp</label>
                        <select name="sortOrder" class="form-select">
                            <option value="">Thứ tự hiển thị</option>
                            <option value="name_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "name_desc")">Tên Z-A</option>
                            <option value="order" selected="@(ViewData["CurrentSort"]?.ToString() == "order")">Thứ tự tăng dần</option>
                            <option value="order_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "order_desc")">Thứ tự giảm dần</option>
                            <option value="status" selected="@(ViewData["CurrentSort"]?.ToString() == "status")">Trạng thái tăng</option>
                            <option value="status_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "status_desc")">Trạng thái giảm</option>
                            <option value="date" selected="@(ViewData["CurrentSort"]?.ToString() == "date")">Cũ nhất</option>
                            <option value="date_desc" selected="@(ViewData["CurrentSort"]?.ToString() == "date_desc")">Mới nhất</option>
                        </select>
                    </div>

                    <!-- View Toggle -->
                    <div class="col-md-2 mb-3">
                        <label for="view" class="form-label">Hiển thị</label>
                        <select name="view" class="form-select">
                            <option value="grid" selected="@(ViewData["CurrentView"]?.ToString() == "grid" || ViewData["CurrentView"]?.ToString() != "list")">Dạng lưới</option>
                            <option value="list" selected="@(ViewData["CurrentView"]?.ToString() == "list")">Dạng danh sách</option>
                        </select>
                    </div>

                    <!-- Submit Buttons -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="btn-group w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>
                                Tìm kiếm
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-refresh"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Category Results -->
    <div class="results-container">
        <!-- Results Summary -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="results-summary">
                <span class="badge bg-primary">@Model.TotalCount</span>
                <span>danh mục được tìm thấy</span>
                @if (Model.TotalCount > 0)
                {
                    <span class="text-muted ms-2">
                        (Trang @Model.PageIndex của @Model.TotalPages - Hiển thị @((Model.PageIndex - 1) * Model.PageSize + 1) đến @Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount))
                    </span>
                }
            </div>
            <div class="view-info">
                <span class="text-muted">
                    @if (ViewData["CurrentView"]?.ToString() == "list")
                    {
                        <text>Hiển thị dạng danh sách</text>
                    }
                    else
                    {
                        <text>Hiển thị dạng lưới</text>
                    }
                </span>
            </div>
        </div>

        @if (Model.Any())
        {
            @if (ViewData["CurrentView"]?.ToString() == "list")
            {
                <!-- List View -->
                <div class="categories-list">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ảnh</th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-sortOrder="@ViewData["NameSortParm"]" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-view="@ViewData["CurrentView"]"
                                           class="text-decoration-none">
                                            Tên danh mục
                                            @if (ViewData["CurrentSort"]?.ToString() == "")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "name_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-sortOrder="@ViewData["OrderSortParm"]" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-view="@ViewData["CurrentView"]"
                                           class="text-decoration-none">
                                            Thứ tự hiển thị
                                            @if (ViewData["CurrentSort"]?.ToString() == "order")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "order_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Danh mục cha</th>
                                    <th>Số sản phẩm</th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-sortOrder="@ViewData["StatusSortParm"]" 
                                           asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                           asp-route-view="@ViewData["CurrentView"]"
                                           class="text-decoration-none">
                                            Trạng thái
                                            @if (ViewData["CurrentSort"]?.ToString() == "status")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "status_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-sort"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="table-image">
                                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                                {
                                                    <img src="@category.ImageUrl" alt="@category.CategoryName" 
                                                         onerror="this.onerror=null; this.src='/assets/images/bee.png';" />
                                                }
                                                else
                                                {
                                                    <div class="no-image-small">
                                                        <i class="fas fa-layer-group"></i>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@category.CategoryName</strong>
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <br><small class="text-muted">@category.Description</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">#@category.DisplayOrder</span>
                                        </td>
                                        <td>
                                            @if (category.ParentCategory != null)
                                            {
                                                <span class="badge bg-info">@category.ParentCategory.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Danh mục cha</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@category.Products.Count()</span>
                                        </td>
                                        <td>
                                            <span class="badge @(category.IsActive ? "bg-success" : "bg-secondary")">
                                                @(category.IsActive ? "Hoạt động" : "Không hoạt động")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("Details", new { id = category.CategoryID })" class="btn btn-sm btn-outline-info" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = category.CategoryID })" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", new { id = category.CategoryID })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <!-- Grid View -->
                <div class="categories-grid">
                    <div class="row">
                        @foreach (var category in Model)
                        {
                            <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                                <div class="modern-category-card @(category.IsActive ? "active" : "inactive")">
                                    <!-- Card Header with Image and Status -->
                                    <div class="card-header-section">
                                        <div class="category-image-wrapper">
                                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                                            {
                                                <img src="@category.ImageUrl" alt="@category.CategoryName" class="category-image" />
                                            }
                                            else
                                            {
                                                <div class="category-placeholder">
                                                    <i class="fas fa-layer-group"></i>
                                                </div>
                                            }
                                            <div class="image-overlay">
                                                <div class="quick-actions">
                                                    <button class="action-btn view-btn" onclick="window.location.href='@Url.Action("Details", new { id = category.CategoryID })'" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="action-btn edit-btn" onclick="window.location.href='@Url.Action("Edit", new { id = category.CategoryID })'" title="Chỉnh sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="action-btn delete-btn" onclick="window.location.href='@Url.Action("Delete", new { id = category.CategoryID })'" title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Status Badge -->
                                        <div class="status-indicator">
                                            <span class="status-dot @(category.IsActive ? "active" : "inactive")"></span>
                                        </div>
                                        
                                        <!-- Type Badge -->
                                        <div class="type-badge">
                                            @if (category.ParentCategoryID.HasValue)
                                            {
                                                <span class="badge-modern child">
                                                    <i class="fas fa-arrow-right"></i>
                                                    Sub
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge-modern parent">
                                                    <i class="fas fa-folder"></i>
                                                    Main
                                                </span>
                                            }
                                        </div>
                                    </div>

                                    <!-- Card Body -->
                                    <div class="card-body-section">
                                        <div class="category-header">
                                            <h3 class="category-title">@category.CategoryName</h3>
                                            <span class="category-order">#@category.DisplayOrder</span>
                                        </div>
                                        
                                        @if (!string.IsNullOrEmpty(category.Description))
                                        {
                                            <p class="category-description">@category.Description</p>
                                        }
                                        
                                        @if (category.ParentCategory != null)
                                        {
                                            <div class="parent-info">
                                                <i class="fas fa-sitemap"></i>
                                                <span>thuộc <strong>@category.ParentCategory.CategoryName</strong></span>
                                            </div>
                                        }
                                    </div>

                                    <!-- Card Footer with Stats -->
                                    <div class="card-footer-section">
                                        <div class="stats-container">
                                            <div class="stat-item">
                                                <div class="stat-icon products">
                                                    <i class="fas fa-box"></i>
                                                </div>
                                                <div class="stat-content">
                                                    <span class="stat-number">@category.Products.Count()</span>
                                                    <span class="stat-label">Sản phẩm</span>
                                                </div>
                                            </div>
                                            
                                            <div class="stat-divider"></div>
                                            
                                            <div class="stat-item">
                                                <div class="stat-icon subcategories">
                                                    <i class="fas fa-sitemap"></i>
                                                </div>
                                                <div class="stat-content">
                                                    <span class="stat-number">@category.SubCategories.Count()</span>
                                                    <span class="stat-label">Danh mục con</span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card-actions">
                                            <div class="status-text">
                                                @if (category.IsActive)
                                                {
                                                    <span class="status-active">
                                                        <i class="fas fa-check-circle"></i>
                                                        Đang hoạt động
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="status-inactive">
                                                        <i class="fas fa-pause-circle"></i>
                                                        Không hoạt động
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <!-- No Categories -->
            <div class="text-center py-5">
                <i class="fas fa-layer-group fa-3x text-muted mb-3"></i>
                <h5>Không tìm thấy danh mục nào</h5>
                <p class="text-muted">Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-undo me-2"></i>
                    Xóa bộ lọc
                </a>
            </div>
        }

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Phân trang danh mục">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-sortOrder="@ViewData["CurrentSort"]" 
                               asp-route-pageNumber="@(Model.PageIndex - 1)" 
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-view="@ViewData["CurrentView"]">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-sortOrder="@ViewData["CurrentSort"]" 
                               asp-route-pageNumber="@i" 
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-view="@ViewData["CurrentView"]">
                                @i
                            </a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-sortOrder="@ViewData["CurrentSort"]" 
                               asp-route-pageNumber="@(Model.PageIndex + 1)" 
                               asp-route-currentFilter="@ViewData["CurrentFilter"]"
                               asp-route-view="@ViewData["CurrentView"]">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div> 