@model JollibeeClone.Areas.Admin.Models.Categories

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category-admin.css" asp-append-version="true" />
}

<div class="edit-category">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-edit text-jollibee-orange me-2"></i>
                Chỉnh sửa danh mục
            </h2>
            <p class="text-muted">Cập nhật thông tin danh mục: <strong>@Model.CategoryName</strong></p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Details", new { id = Model.CategoryID })" class="btn btn-outline-info">
                <i class="fas fa-eye me-2"></i>
                Xem chi tiết
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Form chỉnh sửa danh mục -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin danh mục
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editCategoryForm">
                        <input asp-for="CategoryID" type="hidden" />
                        <input asp-for="ImageUrl" type="hidden" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="CategoryName" class="form-label required">Tên danh mục</label>
                                    <input asp-for="CategoryName" class="form-control form-control-lg" placeholder="Nhập tên danh mục..." />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                    <input asp-for="DisplayOrder" class="form-control" type="number" min="0" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả cho danh mục..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryID" class="form-label">Danh mục cha</label>
                            <select asp-for="ParentCategoryID" class="form-select" asp-items="ViewBag.ParentCategoryID">
                                <option value="">-- Chọn danh mục cha (nếu có) --</option>
                            </select>
                            <div class="form-text">Để trống nếu đây là danh mục gốc</div>
                            <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    Kích hoạt danh mục
                                </label>
                            </div>
                            <div class="form-text">Danh mục chỉ hiển thị khi được kích hoạt</div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Cập nhật danh mục
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Hủy
                            </a>
                            <a href="@Url.Action("Delete", new { id = Model.CategoryID })" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>
                                Xóa danh mục
                            </a>
                        </div>
                        
                        <!-- Hidden file input inside form to ensure file is submitted -->
                        <input type="file" id="hiddenImageFile" name="imageFile" accept="image/*" style="display: none;" />
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Ảnh hiện tại -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh danh mục
                    </h5>
                </div>
                <div class="card-body">
                    <div class="current-image mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="current-image-preview">
                                <img src="@Model.ImageUrl" alt="@Model.CategoryName" class="img-fluid rounded shadow" style="max-height: 250px; width: 100%; object-fit: cover;" />
                                <div class="image-overlay">
                                    <button type="button" class="btn btn-sm btn-light" onclick="viewLargeImage('@Model.ImageUrl', '@Model.CategoryName')">
                                        <i class="fas fa-search-plus"></i>
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Danh mục chưa có ảnh
                            </div>
                        }
                    </div>
                    
                    <div class="image-upload-section">
                        <h6>Thay đổi ảnh:</h6>
                        <div class="file-upload-area" id="fileUploadArea">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p><strong>Kéo thả ảnh mới vào đây</strong></p>
                            <p>hoặc</p>
                            <label for="imageFile" class="btn btn-outline-primary">
                                <i class="fas fa-folder-open me-2"></i>
                                Chọn file mới
                            </label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" style="display: none;" />
                        </div>
                        
                        <div id="imagePreview" class="image-preview" style="display: none;">
                            <img id="previewImg" src="#" alt="Preview" />
                            <div class="image-actions">
                                <button type="button" class="btn btn-sm btn-danger" id="removeImage">
                                    <i class="fas fa-trash"></i>
                                    Xóa ảnh mới
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thông tin thống kê -->
            @if (Model.SubCategories.Any() || Model.Products.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Thống kê
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SubCategories.Any())
                        {
                            <div class="stat-item">
                                <div class="stat-icon bg-info">
                                    <i class="fas fa-sitemap"></i>
                                </div>
                                <div class="stat-content">
                                    <h6>@Model.SubCategories.Count()</h6>
                                    <p>Danh mục con</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.Products.Any())
                        {
                            <div class="stat-item">
                                <div class="stat-icon bg-success">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="stat-content">
                                    <h6>@Model.Products.Count()</h6>
                                    <p>Sản phẩm</p>
                                </div>
                            </div>
                        }
                        
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-muted">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Xóa danh mục sẽ ảnh hưởng đến các mục liên quan
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
.header-actions {
    display: flex;
    gap: 10px;
}

.current-image-preview {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
}

.current-image-overlay {
    position: absolute;
    top: 10px;
    right: 10px;
}

.no-current-image {
    text-align: center;
    padding: 40px 20px;
    background: #f8f9fa;
    border-radius: 8px;
    color: #6c757d;
}

.no-current-image i {
    font-size: 3rem;
    margin-bottom: 15px;
}

.stat-item {
    display: flex;
    align-items: center;
    padding: 15px 0;
    border-bottom: 1px solid #f1f1f1;
}

.stat-item:last-child {
    border-bottom: none;
}

.stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-right: 15px;
}

.stat-content h6 {
    margin: 0;
    font-weight: 600;
    font-size: 1.2rem;
}

.stat-content p {
    margin: 0;
    color: #6c757d;
    font-size: 0.9rem;
}
</style>

@section Scripts {
<script>
$(document).ready(function() {
    // Xử lý upload ảnh mới (tương tự như Create)
    $('#imageFile').on('change', function(e) {
        handleImageSelect(e.target.files[0]);
    });

    $('#fileUploadArea').on('dragover', function(e) {
        e.preventDefault();
        $(this).addClass('drag-over');
    });

    $('#fileUploadArea').on('dragleave', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
    });

    $('#fileUploadArea').on('drop', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
        
        var files = e.originalEvent.dataTransfer.files;
        if (files.length > 0) {
            handleImageSelect(files[0]);
        }
    });

    $('#fileUploadArea').on('click', function() {
        $('#imageFile').click();
    });

    $('#removeImage').on('click', function() {
        $('#imageFile').val('');
        $('#imagePreview').hide();
        $('#fileUploadArea').show();
    });

    function handleImageSelect(file) {
        if (!file) return;

        if (!file.type.match('image.*')) {
            alert('Vui lòng chọn file ảnh!');
            return;
        }

        if (file.size > 5 * 1024 * 1024) {
            alert('File ảnh quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
            return;
        }

        var reader = new FileReader();
        reader.onload = function(e) {
            $('#previewImg').attr('src', e.target.result);
            $('#fileUploadArea').hide();
            $('#imagePreview').show();
        };
        reader.readAsDataURL(file);
    }
});
</script>
} 