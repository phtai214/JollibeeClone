@model JollibeeClone.Areas.Admin.Models.Categories

@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<div class="create-category">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-plus-circle text-jollibee-red me-2"></i>
                Thêm danh mục mới
            </h2>
            <p class="text-muted">Tạo danh mục sản phẩm mới cho cửa hàng</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Form tạo danh mục -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin danh mục
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="CategoryName" class="form-label required">Tên danh mục</label>
                                    <input asp-for="CategoryName" class="form-control form-control-lg" placeholder="Nhập tên danh mục..." />
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                                    <input asp-for="DisplayOrder" class="form-control" type="number" min="0" value="0" />
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả cho danh mục..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryID" class="form-label">Danh mục cha</label>
                            <select asp-for="ParentCategoryID" class="form-select" asp-items="ViewBag.ParentCategoryID">
                                <option value="">-- Chọn danh mục cha (nếu có) --</option>
                            </select>
                            <div class="form-text">Để trống nếu đây là danh mục gốc</div>
                            <span asp-validation-for="ParentCategoryID" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">
                                    Kích hoạt danh mục
                                </label>
                            </div>
                            <div class="form-text">Danh mục chỉ hiển thị khi được kích hoạt</div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Tạo danh mục
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Upload ảnh -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh danh mục
                    </h5>
                </div>
                <div class="card-body">
                    <div class="image-upload-section">
                        <div class="file-upload-area" id="fileUploadArea">
                            <div class="file-upload-icon">
                                <i class="fas fa-cloud-upload-alt"></i>
                            </div>
                            <p><strong>Kéo thả ảnh vào đây</strong></p>
                            <p>hoặc</p>
                            <label for="imageFile" class="btn btn-outline-primary">
                                <i class="fas fa-folder-open me-2"></i>
                                Chọn file
                            </label>
                            <input type="file" id="imageFile" name="imageFile" accept="image/*" style="display: none;" />
                        </div>
                        
                        <div id="imagePreview" class="image-preview" style="display: none;">
                            <img id="previewImg" src="#" alt="Preview" />
                            <div class="image-actions">
                                <button type="button" class="btn btn-sm btn-danger" id="removeImage">
                                    <i class="fas fa-trash"></i>
                                    Xóa ảnh
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="upload-guidelines">
                        <h6><i class="fas fa-info-circle me-2"></i>Hướng dẫn upload ảnh:</h6>
                        <ul>
                            <li>Kích thước tối đa: 5MB</li>
                            <li>Định dạng: JPG, PNG, GIF</li>
                            <li>Kích thước khuyến nghị: 400x300px</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Hướng dẫn -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Gợi ý
                    </h5>
                </div>
                <div class="card-body">
                    <div class="tips">
                        <div class="tip-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Đặt tên danh mục rõ ràng, dễ hiểu</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Sử dụng mô tả để giải thích chi tiết</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Thứ tự hiển thị giúp sắp xếp danh mục</span>
                        </div>
                        <div class="tip-item">
                            <i class="fas fa-check-circle text-success"></i>
                            <span>Ảnh nên có nền trắng hoặc trong suốt</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.required::after {
    content: " *";
    color: var(--jollibee-red);
}

.form-actions {
    padding-top: 20px;
    border-top: 1px solid #dee2e6;
    display: flex;
    gap: 15px;
}

.image-upload-section {
    margin-bottom: 20px;
}

.upload-guidelines {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 8px;
    border-left: 4px solid var(--jollibee-orange);
}

.upload-guidelines h6 {
    margin-bottom: 10px;
    color: var(--jollibee-dark);
}

.upload-guidelines ul {
    margin: 0;
    padding-left: 20px;
}

.upload-guidelines li {
    margin-bottom: 5px;
    font-size: 0.9rem;
    color: #6c757d;
}

.tips {
    space-y: 10px;
}

.tip-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10px;
}

.tip-item i {
    margin-right: 10px;
    margin-top: 2px;
    font-size: 0.9rem;
}

.tip-item span {
    font-size: 0.9rem;
    color: #6c757d;
    line-height: 1.4;
}

#fileUploadArea {
    cursor: pointer;
    transition: all 0.3s ease;
}

#fileUploadArea:hover {
    border-color: var(--jollibee-red);
    background: rgba(220, 20, 60, 0.02);
}

.image-actions {
    position: absolute;
    top: 10px;
    right: 10px;
}
</style>

@section Scripts {
<script>
$(document).ready(function() {
    // Xử lý upload ảnh
    $('#imageFile').on('change', function(e) {
        handleImageSelect(e.target.files[0]);
    });

    // Drag & Drop functionality
    $('#fileUploadArea').on('dragover', function(e) {
        e.preventDefault();
        $(this).addClass('drag-over');
    });

    $('#fileUploadArea').on('dragleave', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
    });

    $('#fileUploadArea').on('drop', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
        
        var files = e.originalEvent.dataTransfer.files;
        if (files.length > 0) {
            handleImageSelect(files[0]);
        }
    });

    // Click to upload
    $('#fileUploadArea').on('click', function() {
        $('#imageFile').click();
    });

    // Remove image
    $('#removeImage').on('click', function() {
        $('#imageFile').val('');
        $('#imagePreview').hide();
        $('#fileUploadArea').show();
    });

    function handleImageSelect(file) {
        if (!file) return;

        // Validate file type
        if (!file.type.match('image.*')) {
            alert('Vui lòng chọn file ảnh!');
            return;
        }

        // Validate file size (5MB)
        if (file.size > 5 * 1024 * 1024) {
            alert('File ảnh quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
            return;
        }

        // Show preview
        var reader = new FileReader();
        reader.onload = function(e) {
            $('#previewImg').attr('src', e.target.result);
            $('#fileUploadArea').hide();
            $('#imagePreview').show();
        };
        reader.readAsDataURL(file);
    }
});
</script>
}

@section Styles {
<style>
.drag-over {
    border-color: var(--jollibee-red) !important;
    background: rgba(220, 20, 60, 0.05) !important;
}
</style>
} 