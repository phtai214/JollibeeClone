@model JollibeeClone.Areas.Admin.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jollibee Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/admin-login.css" rel="stylesheet" />
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <div class="login-container">
        <!-- Header -->
        <div class="login-header">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-hamburger"></i>
                </div>
                <h1>Admin Panel</h1>
                <p>Chào mừng bạn đến với hệ thống quản trị Jollibee</p>
            </div>
        </div>

        <!-- Body -->
        <div class="login-body">
            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            <!-- Error Messages -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Login Form -->
            <form asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <div class="input-group">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <div class="input-group">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Ghi nhớ đăng nhập
                    </label>
                </div>

                <button type="submit" class="btn btn-login" id="loginBtn">
                    <span class="btn-text">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Đăng nhập
                    </span>
                </button>
            </form>

            <div class="footer-text">
                <p>© 2024 Jollibee Clone. Được phát triển với <i class="fas fa-heart text-danger"></i></p>
                <p><small>Chỉ dành cho quản trị viên có quyền truy cập</small></p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Form submission with loading animation
            $('#loginForm').on('submit', function() {
                const $btn = $('#loginBtn');
                $btn.addClass('loading');
                $btn.find('.btn-text').html('<span>Đang đăng nhập...</span>');
                
                // Reset after 10 seconds if no response
                setTimeout(function() {
                    $btn.removeClass('loading');
                    $btn.find('.btn-text').html('<i class="fas fa-sign-in-alt me-2"></i>Đăng nhập');
                }, 10000);
            });

            // Auto focus on first input
            $('#Email').focus();

            // Enter key submission
            $('.form-control').on('keypress', function(e) {
                if (e.which === 13) {
                    $('#loginForm').submit();
                }
            });

            // Input animation effects
            $('.form-control').on('focus', function() {
                $(this).closest('.input-group').find('i').css('color', '#E2211C');
            });

            $('.form-control').on('blur', function() {
                $(this).closest('.input-group').find('i').css('color', '#6c757d');
            });
        });
    </script>
</body>
</html> 