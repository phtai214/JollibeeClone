@model JollibeeClone.Areas.Admin.ViewModels.LoginViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jollibee Admin</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/css/admin-login.css" rel="stylesheet" />
</head>
<body>
    <!-- Background Pattern -->
    <div class="bg-pattern"></div>
    
    <!-- Floating Elements -->
    <div class="floating-elements">
        <div class="floating-item"></div>
        <div class="floating-item"></div>
        <div class="floating-item"></div>
        <div class="floating-item"></div>
    </div>

    <div class="login-container">
        <!-- Header -->
        <div class="login-header">
            <div class="brand-logo">
                <i class="fas fa-crown"></i>
            </div>
            <h1 class="login-title">Admin Portal</h1>
            <p class="login-subtitle">Chào mừng bạn đến với hệ thống quản trị Jollibee</p>
        </div>

        <!-- Form -->
        <div class="login-form">
            <!-- Success Alert -->
            <div class="alert alert-success" style="display: none;" id="successAlert">
                <i class="fas fa-check-circle"></i>
                <span>Đăng nhập thành công!</span>
            </div>

            <!-- Error Alert -->
            <div class="alert alert-danger" style="display: none;" id="errorAlert">
                <i class="fas fa-exclamation-triangle"></i>
                <span>Email hoặc mật khẩu không chính xác!</span>
            </div>

            <form id="loginForm">
                <div class="form-group">
                    <label class="form-label" for="email">Email</label>
                    <div class="input-wrapper">
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-input" 
                            placeholder="Nhập địa chỉ email của bạn"
                            required
                        >
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Mật khẩu</label>
                    <div class="input-wrapper">
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-input" 
                            placeholder="Nhập mật khẩu của bạn"
                            required
                        >
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                </div>

                <div class="form-check-wrapper">
                    <input type="checkbox" id="remember" name="remember" class="form-checkbox">
                    <label for="remember" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <button type="submit" class="login-button" id="loginBtn">
                    <span class="button-content">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>Đăng nhập</span>
                    </span>
                </button>
            </form>

            <div class="footer-text">
                <p>© 2024 Jollibee Clone. Được phát triển với <i class="fas fa-heart heart"></i></p>
                <p><small>Chỉ dành cho quản trị viên có quyền truy cập</small></p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.getElementById('loginForm');
            const loginBtn = document.getElementById('loginBtn');
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
            const successAlert = document.getElementById('successAlert');
            const errorAlert = document.getElementById('errorAlert');

            // Auto focus on email input
            emailInput.focus();

            // Form submission
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Hide alerts
                successAlert.style.display = 'none';
                errorAlert.style.display = 'none';
                
                // Add loading state
                loginBtn.classList.add('loading');
                
                // Simulate login process
                setTimeout(function() {
                    loginBtn.classList.remove('loading');
                    
                    // Demo: Check credentials
                    const email = emailInput.value;
                    const password = passwordInput.value;
                    
                    if (email === 'admin@jollibee.com' && password === 'admin123') {
                        successAlert.style.display = 'flex';
                        setTimeout(() => {
                            window.location.href = '/Admin/Dashboard';
                        }, 1500);
                    } else {
                        errorAlert.style.display = 'flex';
                    }
                }, 2000);
            });

            // Enhanced input interactions
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });
                
                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'translateY(0)';
                });
                
                // Enter key submission
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        loginForm.dispatchEvent(new Event('submit'));
                    }
                });
            });

            // Custom checkbox interaction
            const checkbox = document.getElementById('remember');
            const checkboxLabel = document.querySelector('.form-check-label');
            
            checkboxLabel.addEventListener('click', function() {
                checkbox.checked = !checkbox.checked;
            });

            // Add smooth animations for alerts
            function showAlert(alert) {
                alert.style.display = 'flex';
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-10px)';
                
                setTimeout(() => {
                    alert.style.transition = 'all 0.3s ease';
                    alert.style.opacity = '1';
                    alert.style.transform = 'translateY(0)';
                }, 10);
            }

            // Demo credentials hint
            console.log('Demo credentials: admin@jollibee.com / admin123');
        });
    </script>
</body>
</html> 