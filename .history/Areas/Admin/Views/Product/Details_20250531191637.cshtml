@model JollibeeClone.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-admin.css" asp-append-version="true" />
    <style>
        /* Modern Image Upload Area */
        .image-upload-area {
            position: relative;
            background: linear-gradient(135deg, #f8f9ff 0%, #e8f4f8 100%);
            border: 2px dashed #cbd5e0;
            border-radius: 20px;
            padding: 40px 20px;
            transition: all 0.3s ease;
            overflow: hidden;
            min-height: 280px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-upload-area:hover {
            border-color: var(--jollibee-red);
            background: linear-gradient(135deg, #fff0f0 0%, #fef8f8 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(220, 38, 38, 0.1);
        }

        .upload-content {
            text-align: center;
            position: relative;
            z-index: 2;
        }

        .upload-icon-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 20px;
        }

        .upload-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--jollibee-red) 0%, #ff4757 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin: 0 auto;
            box-shadow: 0 8px 25px rgba(220, 38, 38, 0.3);
            animation: float 3s ease-in-out infinite;
        }

        .upload-sparkles {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

        .upload-sparkles i {
            position: absolute;
            color: var(--jollibee-yellow);
            font-size: 0.8rem;
            opacity: 0;
            animation: sparkle 2s ease-in-out infinite;
        }

        .spark-1 {
            top: 10px;
            right: 15px;
            animation-delay: 0s;
        }

        .spark-2 {
            top: 35px;
            left: 10px;
            animation-delay: 0.7s;
        }

        .spark-3 {
            bottom: 15px;
            right: 20px;
            animation-delay: 1.4s;
        }

        .upload-title {
            color: #2d3748;
            font-weight: 600;
            margin-bottom: 8px;
            font-size: 1.2rem;
        }

        .upload-subtitle {
            color: #718096;
            margin-bottom: 25px;
            font-size: 0.95rem;
        }

        .btn-upload {
            position: relative;
            display: inline-block;
            padding: 12px 30px;
            background: linear-gradient(135deg, var(--jollibee-red) 0%, #ff4757 100%);
            color: white;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(220, 38, 38, 0.3);
        }

        .btn-upload:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(220, 38, 38, 0.4);
        }

        .btn-upload-text {
            position: relative;
            z-index: 2;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-upload-bg {
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .btn-upload:hover .btn-upload-bg {
            left: 100%;
        }

        .upload-decoration {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
            z-index: 1;
        }

        .decoration-circle {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: circleFloat 6s ease-in-out infinite;
        }

        .circle-1 {
            width: 30px;
            height: 30px;
            background: var(--jollibee-red);
            top: 20px;
            left: 20px;
            animation-delay: 0s;
        }

        .circle-2 {
            width: 20px;
            height: 20px;
            background: var(--jollibee-yellow);
            top: 60px;
            right: 30px;
            animation-delay: 2s;
        }

        .circle-3 {
            width: 25px;
            height: 25px;
            background: var(--jollibee-orange);
            bottom: 30px;
            left: 40px;
            animation-delay: 4s;
        }

        /* Animations */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        @keyframes sparkle {
            0%, 100% { 
                opacity: 0; 
                transform: scale(0.5) rotate(0deg); 
            }
            50% { 
                opacity: 1; 
                transform: scale(1) rotate(180deg); 
            }
        }

        @keyframes circleFloat {
            0%, 100% { 
                transform: translateY(0px) rotate(0deg); 
                opacity: 0.1; 
            }
            50% { 
                transform: translateY(-20px) rotate(180deg); 
                opacity: 0.3; 
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .image-upload-area {
                padding: 30px 15px;
                min-height: 250px;
            }
            
            .upload-icon {
                width: 65px;
                height: 65px;
                font-size: 2rem;
            }
            
            .upload-title {
                font-size: 1.1rem;
            }
            
            .btn-upload {
                padding: 10px 25px;
                font-size: 0.9rem;
            }
        }
    </style>
}

<div class="product-details">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-hamburger text-jollibee-red me-2"></i>
                Chi tiết sản phẩm
            </h2>
            <p class="text-muted">Thông tin chi tiết về sản phẩm: <strong>@Model.ProductName</strong></p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>
                Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin chính -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin sản phẩm
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID sản phẩm:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">#@Html.DisplayFor(model => model.ProductID)</span>
                        </dd>

                        <dt class="col-sm-3">Tên sản phẩm:</dt>
                        <dd class="col-sm-9">
                            <h5 class="mb-0">@Html.DisplayFor(model => model.ProductName)</h5>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.ShortDescription))
                        {
                            <dt class="col-sm-3">Mô tả ngắn:</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ShortDescription)</dd>
                        }

                        <dt class="col-sm-3">Giá bán:</dt>
                        <dd class="col-sm-9">
                            <div class="price-display">
                                <span class="current-price">@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                @if (Model.OriginalPrice.HasValue && Model.OriginalPrice > Model.Price)
                                {
                                    <span class="original-price ms-2">@Model.OriginalPrice.Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                                    <span class="discount-badge ms-2">
                                        -@(Math.Round((decimal)(Model.OriginalPrice - Model.Price) / Model.OriginalPrice.Value * 100, 0))%
                                    </span>
                                }
                            </div>
                        </dd>

                        <dt class="col-sm-3">Danh mục:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-folder me-1"></i>
                                    @Html.DisplayFor(model => model.Category.CategoryName)
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa phân loại</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Tùy chỉnh:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsConfigurable)
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="fas fa-cogs me-1"></i>
                                    Có thể tùy chỉnh
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">Không tùy chỉnh</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Trạng thái:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check me-1"></i>
                                    Có sẵn
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-exclamation me-1"></i>
                                    Hết hàng
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Actions -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>
                        Thao tác
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>
                            Chỉnh sửa sản phẩm
                        </a>
                        <a href="@Url.Action("Delete", new { id = Model.ProductID })" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>
                            Xóa sản phẩm
                        </a>
                        <button class="btn btn-info" onclick="copyProductInfo()">
                            <i class="fas fa-copy me-2"></i>
                            Sao chép thông tin
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Ảnh sản phẩm -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh sản phẩm
                    </h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded shadow" style="max-height: 300px;" />
                        <div class="mt-2">
                            <small class="text-muted">Nhấp để xem ảnh lớn</small>
                        </div>
                    }
                    else
                    {
                        <div class="image-upload-area">
                            <div class="upload-content">
                                <div class="upload-icon-wrapper">
                                    <div class="upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <div class="upload-sparkles">
                                        <i class="fas fa-sparkles spark-1"></i>
                                        <i class="fas fa-sparkles spark-2"></i>
                                        <i class="fas fa-sparkles spark-3"></i>
                                    </div>
                                </div>
                                <h5 class="upload-title">Chưa có ảnh sản phẩm</h5>
                                <p class="upload-subtitle">Thêm ảnh để sản phẩm trông hấp dẫn hơn</p>
                                <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn-upload">
                                    <span class="btn-upload-text">
                                        <i class="fas fa-image me-2"></i>
                                        Thêm ảnh ngay
                                    </span>
                                    <div class="btn-upload-bg"></div>
                                </a>
                            </div>
                            <div class="upload-decoration">
                                <div class="decoration-circle circle-1"></div>
                                <div class="decoration-circle circle-2"></div>
                                <div class="decoration-circle circle-3"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Thống kê nhanh -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="stat-item">
                        <div class="stat-icon bg-info">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="stat-content">
                            <h6>Mới tạo</h6>
                            <p>Sản phẩm vừa được thêm</p>
                        </div>
                    </div>
                    
                    @if (Model.OriginalPrice.HasValue && Model.OriginalPrice > Model.Price)
                    {
                        <div class="stat-item">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-percentage"></i>
                            </div>
                            <div class="stat-content">
                                <h6>@(Math.Round((decimal)(Model.OriginalPrice - Model.Price) / Model.OriginalPrice.Value * 100, 0))% Giảm giá</h6>
                                <p>Tiết kiệm @((Model.OriginalPrice - Model.Price).Value.ToString("C0", new System.Globalization.CultureInfo("vi-VN")))</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Gợi ý -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Gợi ý cải thiện
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="improvement-tips">
                        @if (string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <li><i class="fas fa-image text-warning"></i> Thêm ảnh sản phẩm để tăng tỷ lệ bán</li>
                        }
                        @if (string.IsNullOrEmpty(Model.ShortDescription))
                        {
                            <li><i class="fas fa-pencil-alt text-info"></i> Thêm mô tả ngắn giúp khách hàng hiểu rõ hơn</li>
                        }
                        @if (!Model.OriginalPrice.HasValue)
                        {
                            <li><i class="fas fa-tag text-success"></i> Thêm giá gốc để tạo cảm giác ưu đãi</li>
                        }
                        @if (!Model.IsConfigurable)
                        {
                            <li><i class="fas fa-cogs text-primary"></i> Cân nhắc cho phép tùy chỉnh sản phẩm</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function copyProductInfo() {
    var productInfo = `Sản phẩm: @Model.ProductName
Giá: @Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
@(Model.Category != null ? "Danh mục: " + Model.Category.CategoryName : "")
@(!string.IsNullOrEmpty(Model.ShortDescription) ? "Mô tả: " + Model.ShortDescription : "")`;
    
    navigator.clipboard.writeText(productInfo).then(function() {
        alert('Đã sao chép thông tin sản phẩm!');
    }).catch(function() {
        // Fallback for older browsers
        var textArea = document.createElement('textarea');
        textArea.value = productInfo;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        alert('Đã sao chép thông tin sản phẩm!');
    });
}

$(document).ready(function() {
    // Click to view large image
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <text>
        $('img[alt="@Model.ProductName"]').on('click', function() {
            var modal = `
                <div class="modal fade" id="imageModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">@Model.ProductName</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center">
                                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.ProductName">
                            </div>
                        </div>
                    </div>
                </div>`;
            
            $('body').append(modal);
            $('#imageModal').modal('show');
            
            $('#imageModal').on('hidden.bs.modal', function() {
                $(this).remove();
            });
        });
        </text>
    }
});
</script>
} 