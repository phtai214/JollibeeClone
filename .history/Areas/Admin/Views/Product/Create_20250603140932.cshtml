@section Scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
$(document).ready(function() {
    // Form validation và submission handling
    $('#createProductForm').on('submit', function(e) {
        console.log('=== FORM SUBMISSION DEBUG ===');
        console.log('Form submitted!');
        
        // Debug toàn bộ form data
        var formData = new FormData(this);
        console.log('=== ALL FORM DATA ===');
        for (var pair of formData.entries()) {
            console.log(pair[0] + ': ' + pair[1]);
        }
        
        // Debug specific values
        var selectedImageUrl = $('#selectedImageUrl').val();
        var imageFile = $('#imageFile')[0].files[0];
        console.log('=== IMAGE DEBUG ===');
        console.log('Selected Image URL from hidden input:', selectedImageUrl);
        console.log('Image File:', imageFile ? imageFile.name : 'None');
        console.log('Hidden input exists:', $('#selectedImageUrl').length > 0);
        console.log('Hidden input value:', $('#selectedImageUrl').val());
        
        // Đảm bảo selectedImageUrl được thêm vào form data nếu có
        if (selectedImageUrl && !formData.has('selectedImageUrl')) {
            formData.append('selectedImageUrl', selectedImageUrl);
            console.log('Manually added selectedImageUrl to form data:', selectedImageUrl);
        }
        
        // Basic client-side validation
        var isValid = true;
        var productName = $('#ProductName').val().trim();
        var price = parseFloat($('#Price').val());
        var categoryId = parseInt($('#CategoryID').val());
        
        console.log('=== VALIDATION CHECK ===');
        console.log('Product Name:', productName);
        console.log('Price:', price);
        console.log('Category ID:', categoryId);
        
        if (!productName) {
            alert('Vui lòng nhập tên sản phẩm!');
            $('#ProductName').focus();
            isValid = false;
        } else if (price <= 0) {
            alert('Vui lòng nhập giá sản phẩm hợp lệ!');
            $('#Price').focus();
            isValid = false;
        } else if (!categoryId || categoryId <= 0) {
            alert('Vui lòng chọn danh mục sản phẩm!');
            $('#CategoryID').focus();
            isValid = false;
        }
        
        if (!isValid) {
            e.preventDefault();
            console.log('❌ Form validation failed');
            return false;
        }
        
        console.log('✅ Form validation passed, submitting...');
        
        // Show loading state
        var submitBtn = $(this).find('button[type="submit"]');
        var originalText = submitBtn.html();
        submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang tạo...');
        
        // Reset on error (failsafe)
        setTimeout(function() {
            submitBtn.prop('disabled', false).html(originalText);
        }, 10000);
    });

    // Xử lý chọn ảnh có sẵn với logging tốt hơn
    $('#existingImageSelect').on('change', function() {
        var selectedImageUrl = $(this).val();
        console.log('=== IMAGE SELECTION DEBUG ===');
        console.log('Dropdown value changed to:', selectedImageUrl);
        
        if (selectedImageUrl) {
            console.log('Processing selected image:', selectedImageUrl);
            
            // Clear file input first
            $('#imageFile').val('');
            console.log('Cleared file input');
            
            // Set hidden input value
            $('#selectedImageUrl').val(selectedImageUrl);
            console.log('Set hidden input value to:', selectedImageUrl);
            console.log('Hidden input now contains:', $('#selectedImageUrl').val());
            
            // Show preview area
            $('#fileUploadArea').hide();
            $('#imagePreview').show();
            console.log('Switched to preview mode');
            
            // Load image with better error handling
            $('#previewImg').attr('src', 'data:image/svg+xml;base64,');
            
            // Test image loading
            var testImg = new Image();
            testImg.onload = function() {
                $('#previewImg').attr('src', selectedImageUrl);
                $('#imagePreview').addClass('success');
                setTimeout(function() {
                    $('#imagePreview').removeClass('success');
                }, 2000);
                console.log('✅ Image loaded successfully:', selectedImageUrl);
            };
            testImg.onerror = function() {
                console.error('❌ Failed to load image:', selectedImageUrl);
                $('#previewImg').attr('src', '/assets/images/bee.png');
                $('#selectedImageUrl').val('/assets/images/bee.png'); // Update to fallback image
                console.log('Updated hidden input to fallback image:', $('#selectedImageUrl').val());
                alert('Không thể tải ảnh đã chọn. Đã chuyển sang ảnh mặc định.');
            };
            testImg.src = selectedImageUrl;
        } else {
            // Clear selection
            $('#selectedImageUrl').val('');
            $('#imagePreview').hide();
            $('#fileUploadArea').show();
            console.log('Cleared image selection');
        }
    });

    // Xử lý upload ảnh (tương tự như Category)
    $('#imageFile').on('change', function(e) {
        handleImageSelect(e.target.files[0]);
        $('#existingImageSelect').val(''); // Clear dropdown
        $('#selectedImageUrl').val(''); // Clear hidden input
    });

    $('#fileUploadArea').on('dragover', function(e) {
        e.preventDefault();
        $(this).addClass('drag-over');
    });

    $('#fileUploadArea').on('dragleave', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
    });

    $('#fileUploadArea').on('drop', function(e) {
        e.preventDefault();
        $(this).removeClass('drag-over');
        
        var files = e.originalEvent.dataTransfer.files;
        if (files.length > 0) {
            handleImageSelect(files[0]);
        }
    });

    $('#fileUploadArea').on('click', function() {
        $('#imageFile').click();
    });

    $('#removeImage').on('click', function() {
        $('#imageFile').val('');
        $('#imagePreview').hide();
        $('#fileUploadArea').show();
    });

    // Preview giá
    $('#Price, #OriginalPrice').on('input', function() {
        updatePricePreview();
    });

    function handleImageSelect(file) {
        if (!file) return;

        if (!file.type.match('image.*')) {
            alert('Vui lòng chọn file ảnh!');
            return;
        }

        if (file.size > 5 * 1024 * 1024) {
            alert('File ảnh quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
            return;
        }

        var reader = new FileReader();
        reader.onload = function(e) {
            $('#previewImg').attr('src', e.target.result);
            $('#fileUploadArea').hide();
            $('#imagePreview').show();
        };
        reader.readAsDataURL(file);
    }

    function updatePricePreview() {
        var currentPrice = parseFloat($('#Price').val()) || 0;
        var originalPrice = parseFloat($('#OriginalPrice').val()) || 0;

        // Format giá theo VND
        var currentPriceText = currentPrice.toLocaleString('vi-VN') + ' đ';
        $('#previewCurrentPrice').text(currentPriceText);

        if (originalPrice > 0 && originalPrice > currentPrice) {
            var originalPriceText = originalPrice.toLocaleString('vi-VN') + ' đ';
            $('#previewOriginalPrice').text(originalPriceText).show();
            
            var discount = Math.round((originalPrice - currentPrice) / originalPrice * 100);
            $('#previewDiscount').text('-' + discount + '%').show();
        } else {
            $('#previewOriginalPrice').hide();
            $('#previewDiscount').hide();
        }
    }

    // Initialize price preview
    updatePricePreview();
});
