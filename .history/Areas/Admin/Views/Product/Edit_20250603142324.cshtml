@model JollibeeClone.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="edit-product">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-edit text-primary me-2"></i>
                Chỉnh sửa sản phẩm
            </h2>
            <p class="text-muted">Cập nhật thông tin sản phẩm: <strong>@Model.ProductName</strong></p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Hiển thị lỗi nếu có -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <h6><i class="fas fa-exclamation-triangle me-2"></i>Vui lòng kiểm tra lại thông tin:</h6>
            <div asp-validation-summary="All" class="mb-0"></div>
        </div>
    }

    <!-- Form chỉnh sửa sản phẩm -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin sản phẩm
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input asp-for="ProductID" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                            <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm..." required />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortDescription" class="form-label">Mô tả ngắn</label>
                            <textarea asp-for="ShortDescription" class="form-control" rows="3" placeholder="Nhập mô tả ngắn về sản phẩm..."></textarea>
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                    <div class="input-group">
                                        <input asp-for="Price" class="form-control" type="number" step="1000" min="1000" placeholder="0" required />
                                        <span class="input-group-text">đ</span>
                                    </div>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OriginalPrice" class="form-label">Giá gốc (VNĐ)</label>
                                    <div class="input-group">
                                        <input asp-for="OriginalPrice" class="form-control" type="number" step="1000" min="0" placeholder="0" />
                                        <span class="input-group-text">đ</span>
                                    </div>
                                    <div class="form-text">Để trống nếu không có giá gốc khác</div>
                                    <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryID" class="form-label">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.CategoryID" required>
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsConfigurable" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsConfigurable" class="form-check-label">
                                            Sản phẩm có thể tùy chỉnh
                                        </label>
                                    </div>
                                    <div class="form-text">Cho phép khách hàng tùy chỉnh sản phẩm (size, topping...)</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsAvailable" class="form-check-label">
                                            Sản phẩm có sẵn
                                        </label>
                                    </div>
                                    <div class="form-text">Sản phẩm sẽ hiển thị cho khách hàng</div>
                                </div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>
                                Cập nhật sản phẩm
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>
                                Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Ảnh hiện tại và upload ảnh mới -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh sản phẩm
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Ảnh hiện tại -->
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Ảnh hiện tại:</label>
                            <div class="current-image">
                                <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-fluid rounded" style="max-height: 200px;" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Sản phẩm chưa có ảnh
                            </div>
                        </div>
                    }
                    
                    <!-- Upload ảnh mới -->
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Thay đổi ảnh sản phẩm</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control" accept="image/*" />
                        <div class="form-text">Chọn file ảnh mới từ máy tính (JPG, PNG, GIF, WEBP - tối đa 5MB). Để trống nếu không muốn thay đổi.</div>
                    </div>
                    
                    <!-- Preview ảnh mới -->
                    <div id="newImagePreview" style="display: none;">
                        <label class="form-label">Ảnh mới:</label>
                        <img id="previewImg" src="#" alt="Preview" class="img-fluid rounded mb-2" style="max-height: 200px;" />
                        <div>
                            <button type="button" class="btn btn-sm btn-danger" id="removeNewImage">
                                <i class="fas fa-trash"></i> Hủy ảnh mới
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Preview ảnh mới khi chọn file
            $('#imageFile').change(function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImg').attr('src', e.target.result);
                        $('#newImagePreview').show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Hủy ảnh mới
            $('#removeNewImage').click(function() {
                $('#imageFile').val('');
                $('#newImagePreview').hide();
            });
        });
    </script>
} 