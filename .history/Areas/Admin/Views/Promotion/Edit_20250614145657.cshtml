@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            $('input[type="date"]').attr('min', today);

            // Form validation
            $('#promotionForm').on('submit', function(e) {
                updateHiddenInputs();
                
                const selectedProducts = $('.product-checkbox:checked').length;
                const selectedCategories = $('.category-checkbox:checked').length;
                
                if (selectedProducts === 0 || selectedCategories === 0) {
                    e.preventDefault();
                    showAlert('danger', 'Vui lÃ²ng chá»n Ã­t nháº¥t má»™t sáº£n pháº©m VÃ€ má»™t danh má»¥c');
                    return false;
                }
                
                return true;
            });

            // Update hidden inputs when checkboxes change
            $('.product-checkbox, .category-checkbox').on('change', function() {
                updateHiddenInputs();
            });
            
            // Initialize hidden inputs with current selections
            updateHiddenInputs();
        });

        // Update hidden inputs for form submission
        function updateHiddenInputs() {
            const container = document.getElementById('hiddenInputs');
            container.innerHTML = '';
            
            // Add selected products
            $('.product-checkbox:checked').each(function(index) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = `SelectedProductIds[${index}]`;
                input.value = this.value;
                container.appendChild(input);
            });
            
            // Add selected categories
            $('.category-checkbox:checked').each(function(index) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = `SelectedCategoryIds[${index}]`;
                input.value = this.value;
                container.appendChild(input);
            });
        }

        // Product selection functions
        function selectAllProducts() {
            $('.product-checkbox').prop('checked', true);
            updateHiddenInputs();
        }

        function clearAllProducts() {
            $('.product-checkbox').prop('checked', false);
            updateHiddenInputs();
        }

        // Category selection functions
        function selectAllCategories() {
            $('.category-checkbox').prop('checked', true);
            updateHiddenInputs();
        }

        function clearAllCategories() {
            $('.category-checkbox').prop('checked', false);
            updateHiddenInputs();
        }

        // Generate coupon code
        function generateCouponCode() {
            fetch('@Url.Action("GenerateCouponCode")')
                .then(response => response.json())
                .then(data => {
                    if (data.couponCode) {
                        document.getElementById('CouponCode').value = data.couponCode;
                        showAlert('success', 'ÄÃ£ táº¡o mÃ£ voucher: ' + data.couponCode);
                    }
                })
                .catch(error => {
                    console.error('Error generating coupon code:', error);
                    showAlert('danger', 'CÃ³ lá»—i xáº£y ra khi táº¡o mÃ£ voucher');
                });
        }

        // Show alert messages
        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            const container = document.querySelector('.promotion-management');
            const existingAlerts = container.querySelectorAll('.alert');
            existingAlerts.forEach(alert => alert.remove());
            
            const header = container.querySelector('.promotion-header');
            header.insertAdjacentHTML('afterend', alertHtml);
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }
    </script>
} 

