@model JollibeeClone.Areas.Admin.ViewModels.PromotionViewModel

@{
    ViewData["Title"] = "Tạo Voucher mới";
}

@section Styles {
    <link rel="stylesheet" href="~/css/promotion-admin.css" asp-append-version="true" />
}

<div class="promotion-management">
    <!-- Header -->
    <div class="promotion-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title">
                    <i class="fas fa-plus text-jollibee-red me-2"></i>
                    Tạo Voucher mới
                </h2>
                <p class="text-muted mb-0">Tạo voucher giảm giá mới cho cửa hàng</p>
            </div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form -->
    <form asp-action="Create" method="post" class="promotion-form" id="promotionForm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <!-- Thông tin cơ bản -->
        <div class="form-section">
            <h3 class="section-title">
                <i class="fas fa-info-circle me-2"></i>
                Thông tin cơ bản
            </h3>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PromotionName" class="form-label"></label>
                        <input asp-for="PromotionName" class="form-control" placeholder="Nhập tên voucher..." />
                        <span asp-validation-for="PromotionName" class="invalid-feedback"></span>
                        <div class="form-text">Tên voucher sẽ hiển thị cho khách hàng</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CouponCode" class="form-label">Mã voucher (tùy chọn)</label>
                        <div class="input-group">
                            <input asp-for="CouponCode" class="form-control" placeholder="VD: SUMMER2024" 
                                   id="couponCodeInput" oninput="checkCouponCode()" />
                            <button class="btn btn-outline-secondary" type="button" onclick="generateCouponCode()">
                                <i class="fas fa-magic me-1"></i>Tạo tự động
                            </button>
                        </div>
                        <div id="couponCodeFeedback" class="form-text"></div>
                        <span asp-validation-for="CouponCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về voucher..."></textarea>
                <span asp-validation-for="Description" class="invalid-feedback"></span>
                <div class="form-text">Mô tả sẽ giúp khách hàng hiểu rõ hơn về voucher</div>
            </div>

            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">Kích hoạt voucher ngay</label>
                <div class="form-text">Voucher sẽ có thể được sử dụng ngay khi tạo (nếu trong thời gian hiệu lực)</div>
            </div>
        </div>

        <!-- Thông tin giảm giá -->
        <div class="form-section">
            <h3 class="section-title">
                <i class="fas fa-percentage me-2"></i>
                Thông tin giảm giá
            </h3>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DiscountType" class="form-label">Loại giảm giá</label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Percentage">Phần trăm (%)</option>
                        </select>
                        <span asp-validation-for="DiscountType" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DiscountValue" class="form-label">Giá trị giảm</label>
                        <div class="input-group">
                            <input asp-for="DiscountValue" type="number" step="0.01" min="0.01" max="100" class="form-control" placeholder="VD: 20" />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="DiscountValue" class="invalid-feedback"></span>
                        <div class="form-text">Từ 0.01% đến 100%</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="MinOrderValue" class="form-label">Giá trị đơn hàng tối thiểu</label>
                        <div class="input-group">
                            <input asp-for="MinOrderValue" type="number" step="1000" min="0" class="form-control" placeholder="VD: 100000" />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <span asp-validation-for="MinOrderValue" class="invalid-feedback"></span>
                        <div class="form-text">Để trống nếu không có điều kiện tối thiểu</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thời gian hiệu lực -->
        <div class="form-section">
            <h3 class="section-title">
                <i class="fas fa-calendar me-2"></i>
                Thời gian hiệu lực
            </h3>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Giới hạn sử dụng -->
        <div class="form-section">
            <h3 class="section-title">
                <i class="fas fa-limit me-2"></i>
                Giới hạn sử dụng
            </h3>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaxUses" class="form-label">Số lần sử dụng tối đa</label>
                        <input asp-for="MaxUses" type="number" min="1" class="form-control" placeholder="VD: 100" />
                        <span asp-validation-for="MaxUses" class="invalid-feedback"></span>
                        <div class="form-text">Để trống nếu không giới hạn</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MaxUsesPerUser" class="form-label">Số lần sử dụng tối đa mỗi khách hàng</label>
                        <input asp-for="MaxUsesPerUser" type="number" min="1" class="form-control" placeholder="VD: 1" />
                        <span asp-validation-for="MaxUsesPerUser" class="invalid-feedback"></span>
                        <div class="form-text">Để trống nếu không giới hạn</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phạm vi áp dụng -->
        <div class="form-section">
            <h3 class="section-title">
                <i class="fas fa-target me-2"></i>
                Phạm vi áp dụng
            </h3>
            
            <!-- Tabs Navigation -->
            <ul class="nav nav-tabs" id="scopeTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="products-tab" data-bs-toggle="tab" data-bs-target="#products" type="button" role="tab">
                        <i class="fas fa-box me-2"></i>
                        Sản phẩm cụ thể
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="categories-tab" data-bs-toggle="tab" data-bs-target="#categories" type="button" role="tab">
                        <i class="fas fa-tags me-2"></i>
                        Danh mục sản phẩm
                    </button>
                </li>
            </ul>

            <!-- Tabs Content -->
            <div class="tab-content" id="scopeTabsContent">
                <!-- Products Tab -->
                <div class="tab-pane fade show active" id="products" role="tabpanel">
                    <div class="mt-3">
                        <p class="text-muted">Chọn những sản phẩm cụ thể mà voucher này sẽ được áp dụng:</p>
                        
                        <div class="selection-container">
                            <!-- Available Products -->
                            <div>
                                <h5>Sản phẩm có sẵn</h5>
                                <div class="search-box mb-2">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" id="productSearch" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                                </div>
                                <div class="selection-list" id="availableProducts">
                                    @foreach (var product in Model.AvailableProducts)
                                    {
                                        <div class="selection-item" data-id="@product.ProductID" data-name="@product.ProductName.ToLower()">
                                            <input type="checkbox" class="form-check-input" id="product_@product.ProductID" />
                                            <label for="product_@product.ProductID" class="flex-grow-1">
                                                <strong>@product.ProductName</strong>
                                                <div class="text-muted small">@product.Price.ToString("N0") VNĐ</div>
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Selection Controls -->
                            <div class="selection-controls">
                                <button type="button" class="selection-btn" id="addProducts">
                                    <i class="fas fa-chevron-right"></i>
                                    Thêm
                                </button>
                                <button type="button" class="selection-btn" id="removeProducts">
                                    <i class="fas fa-chevron-left"></i>
                                    Bỏ
                                </button>
                                <button type="button" class="selection-btn" id="addAllProducts">
                                    <i class="fas fa-chevron-double-right"></i>
                                    Tất cả
                                </button>
                                <button type="button" class="selection-btn" id="removeAllProducts">
                                    <i class="fas fa-chevron-double-left"></i>
                                    Bỏ tất cả
                                </button>
                            </div>

                            <!-- Selected Products -->
                            <div>
                                <h5>Sản phẩm đã chọn</h5>
                                <div class="selection-list" id="selectedProducts">
                                    <!-- Selected products will be displayed here -->
                                </div>
                                <div class="text-muted small mt-2">
                                    <span id="selectedProductCount">0</span> sản phẩm đã chọn
                                </div>
                            </div>
                        </div>
                        
                        <!-- Hidden inputs for selected products -->
                        <div id="selectedProductInputs"></div>
                    </div>
                </div>

                <!-- Categories Tab -->
                <div class="tab-pane fade" id="categories" role="tabpanel">
                    <div class="mt-3">
                        <p class="text-muted">Chọn danh mục sản phẩm mà voucher này sẽ được áp dụng cho tất cả sản phẩm trong danh mục:</p>
                        
                        <div class="selection-container">
                            <!-- Available Categories -->
                            <div>
                                <h5>Danh mục có sẵn</h5>
                                <div class="search-box mb-2">
                                    <i class="fas fa-search search-icon"></i>
                                    <input type="text" id="categorySearch" class="form-control" placeholder="Tìm kiếm danh mục..." />
                                </div>
                                <div class="selection-list" id="availableCategories">
                                    @foreach (var category in Model.AvailableCategories)
                                    {
                                        <div class="selection-item" data-id="@category.CategoryID" data-name="@category.CategoryName.ToLower()">
                                            <input type="checkbox" class="form-check-input" id="category_@category.CategoryID" />
                                            <label for="category_@category.CategoryID" class="flex-grow-1">
                                                <strong>@category.CategoryName</strong>
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <div class="text-muted small">@category.Description</div>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Selection Controls -->
                            <div class="selection-controls">
                                <button type="button" class="selection-btn" id="addCategories">
                                    <i class="fas fa-chevron-right"></i>
                                    Thêm
                                </button>
                                <button type="button" class="selection-btn" id="removeCategories">
                                    <i class="fas fa-chevron-left"></i>
                                    Bỏ
                                </button>
                                <button type="button" class="selection-btn" id="addAllCategories">
                                    <i class="fas fa-chevron-double-right"></i>
                                    Tất cả
                                </button>
                                <button type="button" class="selection-btn" id="removeAllCategories">
                                    <i class="fas fa-chevron-double-left"></i>
                                    Bỏ tất cả
                                </button>
                            </div>

                            <!-- Selected Categories -->
                            <div>
                                <h5>Danh mục đã chọn</h5>
                                <div class="selection-list" id="selectedCategories">
                                    <!-- Selected categories will be displayed here -->
                                </div>
                                <div class="text-muted small mt-2">
                                    <span id="selectedCategoryCount">0</span> danh mục đã chọn
                                </div>
                            </div>
                        </div>
                        
                        <!-- Hidden inputs for selected categories -->
                        <div id="selectedCategoryInputs"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-section">
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>
                    Tạo Voucher
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>
                    Hủy
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            $('input[type="date"]').attr('min', today);
            
            // Set default values
            if (!$('#StartDate').val()) {
                $('#StartDate').val(today);
            }

            // Enhanced form validation
            $('#promotionForm').on('submit', function(e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }
            });

            // Real-time validation
            $('#StartDate, #EndDate').on('change', validateDates);
            $('#DiscountValue').on('input', validateDiscountValue);
            $('#MinOrderValue').on('input', validateMinOrderValue);
            
            // Search functionality for products
            $('#productSearch').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('#availableProducts .selection-item').each(function() {
                    const name = $(this).data('name');
                    $(this).toggle(name.includes(searchTerm));
                });
            });
            
            // Search functionality for categories
            $('#categorySearch').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('#availableCategories .selection-item').each(function() {
                    const name = $(this).data('name');
                    $(this).toggle(name.includes(searchTerm));
                });
            });
            
            // Product selection functionality
            $('#addProducts').on('click', function() {
                $('#availableProducts .selection-item input:checked').each(function() {
                    moveProduct($(this).closest('.selection-item'), true);
                });
                updateProductInputs();
                validateSelection();
            });
            
            $('#removeProducts').on('click', function() {
                $('#selectedProducts .selection-item input:checked').each(function() {
                    moveProduct($(this).closest('.selection-item'), false);
                });
                updateProductInputs();
                validateSelection();
            });
            
            $('#addAllProducts').on('click', function() {
                $('#availableProducts .selection-item:visible').each(function() {
                    moveProduct($(this), true);
                });
                updateProductInputs();
                validateSelection();
            });
            
            $('#removeAllProducts').on('click', function() {
                $('#selectedProducts .selection-item').each(function() {
                    moveProduct($(this), false);
                });
                updateProductInputs();
                validateSelection();
            });
            
            // Category selection functionality
            $('#addCategories').on('click', function() {
                $('#availableCategories .selection-item input:checked').each(function() {
                    moveCategory($(this).closest('.selection-item'), true);
                });
                updateCategoryInputs();
                validateSelection();
            });
            
            $('#removeCategories').on('click', function() {
                $('#selectedCategories .selection-item input:checked').each(function() {
                    moveCategory($(this).closest('.selection-item'), false);
                });
                updateCategoryInputs();
                validateSelection();
            });
            
            $('#addAllCategories').on('click', function() {
                $('#availableCategories .selection-item:visible').each(function() {
                    moveCategory($(this), true);
                });
                updateCategoryInputs();
                validateSelection();
            });
            
            $('#removeAllCategories').on('click', function() {
                $('#selectedCategories .selection-item').each(function() {
                    moveCategory($(this), false);
                });
                updateCategoryInputs();
                validateSelection();
            });
            
            function moveProduct(item, toSelected) {
                item.find('input').prop('checked', false);
                if (toSelected) {
                    $('#selectedProducts').append(item);
                } else {
                    $('#availableProducts').append(item);
                }
                updateProductCount();
            }
            
            function moveCategory(item, toSelected) {
                item.find('input').prop('checked', false);
                if (toSelected) {
                    $('#selectedCategories').append(item);
                } else {
                    $('#availableCategories').append(item);
                }
                updateCategoryCount();
            }
            
            function updateProductInputs() {
                const inputs = $('#selectedProductInputs');
                inputs.empty();
                $('#selectedProducts .selection-item').each(function(index) {
                    const id = $(this).data('id');
                    inputs.append(`<input type="hidden" name="SelectedProductIds[${index}]" value="${id}" />`);
                });
                console.log('Updated product inputs:', inputs.html());
            }
            
            function updateCategoryInputs() {
                const inputs = $('#selectedCategoryInputs');
                inputs.empty();
                $('#selectedCategories .selection-item').each(function(index) {
                    const id = $(this).data('id');
                    inputs.append(`<input type="hidden" name="SelectedCategoryIds[${index}]" value="${id}" />`);
                });
                console.log('Updated category inputs:', inputs.html());
            }
            
            function updateProductCount() {
                const count = $('#selectedProducts .selection-item').length;
                $('#selectedProductCount').text(count);
            }
            
            function updateCategoryCount() {
                const count = $('#selectedCategories .selection-item').length;
                $('#selectedCategoryCount').text(count);
            }
            
            // Initialize counts
            updateProductCount();
            updateCategoryCount();
        });

        // Generate coupon code
        function generateCouponCode() {
            fetch('@Url.Action("GenerateCouponCode")')
                .then(response => response.json())
                .then(data => {
                    if (data.couponCode) {
                        document.getElementById('couponCodeInput').value = data.couponCode;
                        checkCouponCode();
                        showAlert('success', 'Đã tạo mã voucher: ' + data.couponCode);
                    }
                })
                .catch(error => {
                    console.error('Error generating coupon code:', error);
                    showAlert('danger', 'Có lỗi xảy ra khi tạo mã voucher');
                });
        }

        // Check coupon code availability
        let checkTimeout;
        function checkCouponCode() {
            const couponCode = document.getElementById('couponCodeInput').value.trim();
            const feedback = document.getElementById('couponCodeFeedback');
            
            clearTimeout(checkTimeout);
            
            if (!couponCode) {
                feedback.innerHTML = '';
                return;
            }

            checkTimeout = setTimeout(() => {
                fetch(`@Url.Action("CheckCouponCode")?couponCode=${encodeURIComponent(couponCode)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.available) {
                            feedback.innerHTML = '<i class="fas fa-check text-success me-1"></i>Mã voucher có thể sử dụng';
                            feedback.className = 'form-text text-success';
                        } else {
                            feedback.innerHTML = '<i class="fas fa-times text-danger me-1"></i>Mã voucher đã tồn tại';
                            feedback.className = 'form-text text-danger';
                        }
                    })
                    .catch(error => {
                        console.error('Error checking coupon code:', error);
                        feedback.innerHTML = '<i class="fas fa-exclamation-triangle text-warning me-1"></i>Không thể kiểm tra mã voucher';
                        feedback.className = 'form-text text-warning';
                    });
            }, 500);
        }

        // Validate dates
        function validateDates() {
            const startDate = new Date(document.getElementById('StartDate').value);
            const endDate = new Date(document.getElementById('EndDate').value);
            const today = new Date();
            today.setHours(0, 0, 0, 0);

            let isValid = true;
            let message = '';

            if (startDate < today.getTime() - 86400000) { // Allow yesterday
                message = 'Ngày bắt đầu không thể quá xa trong quá khứ';
                isValid = false;
            } else if (endDate <= startDate) {
                message = 'Ngày kết thúc phải sau ngày bắt đầu';
                isValid = false;
            } else if ((endDate - startDate) / (1000 * 60 * 60 * 24) > 365) {
                message = 'Thời gian hiệu lực không được vượt quá 365 ngày';
                isValid = false;
            }

            const feedback = document.getElementById('dateFeedback') || createFeedbackElement('dateFeedback', 'EndDate');
            
            if (isValid) {
                feedback.innerHTML = '<i class="fas fa-check text-success me-1"></i>Thời gian hợp lệ';
                feedback.className = 'form-text text-success';
            } else {
                feedback.innerHTML = `<i class="fas fa-times text-danger me-1"></i>${message}`;
                feedback.className = 'form-text text-danger';
            }

            return isValid;
        }

        // Validate discount value
        function validateDiscountValue() {
            const value = parseFloat(document.getElementById('DiscountValue').value);
            const feedback = document.getElementById('discountFeedback') || createFeedbackElement('discountFeedback', 'DiscountValue');
            
            let isValid = true;
            let message = '';

            if (isNaN(value) || value <= 0) {
                message = 'Giá trị giảm giá phải lớn hơn 0';
                isValid = false;
            } else if (value > 100) {
                message = 'Giá trị giảm giá không được vượt quá 100%';
                isValid = false;
            } else if (value < 0.01) {
                message = 'Giá trị giảm giá tối thiểu là 0.01%';
                isValid = false;
            }

            if (isValid) {
                feedback.innerHTML = '<i class="fas fa-check text-success me-1"></i>Giá trị hợp lệ';
                feedback.className = 'form-text text-success';
            } else {
                feedback.innerHTML = `<i class="fas fa-times text-danger me-1"></i>${message}`;
                feedback.className = 'form-text text-danger';
            }

            return isValid;
        }

        // Validate minimum order value
        function validateMinOrderValue() {
            const value = parseFloat(document.getElementById('MinOrderValue').value);
            const feedback = document.getElementById('minOrderFeedback') || createFeedbackElement('minOrderFeedback', 'MinOrderValue');
            
            if (isNaN(value) || !document.getElementById('MinOrderValue').value) {
                feedback.innerHTML = '';
                return true;
            }

            let isValid = true;
            let message = '';

            if (value < 0) {
                message = 'Giá trị đơn hàng tối thiểu không được âm';
                isValid = false;
            } else if (value > 10000000) {
                message = 'Giá trị đơn hàng tối thiểu quá lớn';
                isValid = false;
            }

            if (isValid) {
                feedback.innerHTML = '<i class="fas fa-check text-success me-1"></i>Giá trị hợp lệ';
                feedback.className = 'form-text text-success';
            } else {
                feedback.innerHTML = `<i class="fas fa-times text-danger me-1"></i>${message}`;
                feedback.className = 'form-text text-danger';
            }

            return isValid;
        }

        // Validate selection
        function validateSelection() {
            const productCount = document.querySelectorAll('#selectedProducts .selection-item').length;
            const categoryCount = document.querySelectorAll('#selectedCategories .selection-item').length;
            const feedback = document.getElementById('selectionFeedback') || createFeedbackElement('selectionFeedback', 'scopeTabs');
            
            if (productCount === 0 && categoryCount === 0) {
                feedback.innerHTML = '<i class="fas fa-exclamation-triangle text-warning me-1"></i>Vui lòng chọn ít nhất một sản phẩm hoặc danh mục';
                feedback.className = 'form-text text-warning mt-2';
                return false;
            } else {
                feedback.innerHTML = '<i class="fas fa-check text-success me-1"></i>Đã chọn phạm vi áp dụng';
                feedback.className = 'form-text text-success mt-2';
                return true;
            }
        }

        // Create feedback element
        function createFeedbackElement(id, afterElementId) {
            const feedbackElement = document.createElement('div');
            feedbackElement.id = id;
            feedbackElement.className = 'form-text';
            
            const targetElement = document.getElementById(afterElementId);
            if (targetElement) {
                targetElement.parentNode.insertBefore(feedbackElement, targetElement.nextSibling);
            }
            
            return feedbackElement;
        }

        // Validate entire form
        function validateForm() {
            console.log('Validating form...');
            
            // Check basic required fields
            const promotionName = document.getElementById('PromotionName').value.trim();
            const discountValue = document.getElementById('DiscountValue').value;
            const startDate = document.getElementById('StartDate').value;
            const endDate = document.getElementById('EndDate').value;
            
            if (!promotionName) {
                showAlert('danger', 'Vui lòng nhập tên voucher');
                return false;
            }
            
            if (!discountValue || parseFloat(discountValue) <= 0) {
                showAlert('danger', 'Vui lòng nhập giá trị giảm giá hợp lệ');
                return false;
            }
            
            if (!startDate || !endDate) {
                showAlert('danger', 'Vui lòng chọn ngày bắt đầu và kết thúc');
                return false;
            }
            
            const isDateValid = validateDates();
            const isDiscountValid = validateDiscountValue();
            const isMinOrderValid = validateMinOrderValue();
            const isSelectionValid = validateSelection();
            
            if (!isSelectionValid) {
                showAlert('danger', 'Vui lòng chọn ít nhất một sản phẩm hoặc danh mục để áp dụng voucher');
                return false;
            }
            
            console.log('Form validation results:', {
                isDateValid,
                isDiscountValid,
                isMinOrderValid,
                isSelectionValid
            });
            
            return isDateValid && isDiscountValid && isMinOrderValid && isSelectionValid;
        }

        // Show alert messages
        function showAlert(type, message) {
            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            const container = document.querySelector('.promotion-management');
            const existingAlerts = container.querySelectorAll('.alert');
            existingAlerts.forEach(alert => alert.remove());
            
            const header = container.querySelector('.promotion-header');
            header.insertAdjacentHTML('afterend', alertHtml);
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                const alert = container.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }
    </script>
