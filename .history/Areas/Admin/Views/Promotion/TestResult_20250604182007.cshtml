@{
    ViewData["Title"] = "Test Result - Promotion Debug";
}

<div class="container mt-4">
    <h2>üîß Promotion Debug Test Results</h2>
    
    @if (ViewBag.Success == true)
    {
        <div class="alert alert-success">
            <h4>‚úÖ Basic Tests Passed</h4>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>‚ùå Error Occurred</h4>
            <p><strong>Error:</strong> @ViewBag.Error</p>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üìä Database Connection</h5>
                </div>
                <div class="card-body">
                    <p><strong>Connection Status:</strong> 
                        @if (ViewBag.Success == true)
                        {
                            <span class="text-success">‚úÖ Connected</span>
                        }
                        else
                        {
                            <span class="text-danger">‚ùå Failed</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üìà Promotion Count</h5>
                </div>
                <div class="card-body">
                    <p><strong>Total Promotions:</strong> @ViewBag.PromotionCount</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üéØ PromotionProductScopes Table</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ScopeError == null)
                    {
                        <p><strong>Status:</strong> <span class="text-success">‚úÖ Accessible</span></p>
                        <p><strong>Record Count:</strong> @ViewBag.ScopeCount</p>
                    }
                    else
                    {
                        <p><strong>Status:</strong> <span class="text-danger">‚ùå Error</span></p>
                        <p><strong>Error:</strong> @ViewBag.ScopeError</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>üè∑Ô∏è PromotionCategoryScopes Table</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.CatScopeError == null)
                    {
                        <p><strong>Status:</strong> <span class="text-success">‚úÖ Accessible</span></p>
                        <p><strong>Record Count:</strong> @ViewBag.CatScopeCount</p>
                    }
                    else
                    {
                        <p><strong>Status:</strong> <span class="text-danger">‚ùå Error</span></p>
                        <p><strong>Error:</strong> @ViewBag.CatScopeError</p>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.BasicPromotions != null)
    {
        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>üìã Basic Promotion Data</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Discount</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic promo in ViewBag.BasicPromotions)
                                {
                                    <tr>
                                        <td>@promo.PromotionID</td>
                                        <td>@promo.PromotionName</td>
                                        <td>@promo.DiscountValue%</td>
                                        <td>@(promo.IsActive ? "‚úÖ" : "‚ùå")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Promotion Management</a>
        <button onclick="window.location.reload()" class="btn btn-secondary">üîÑ Refresh Test</button>
    </div>
</div> 