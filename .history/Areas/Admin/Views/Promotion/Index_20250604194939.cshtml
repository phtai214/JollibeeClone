                showAlert('danger', 'C√≥ l·ªói x·∫£y ra khi th·ª±c hi·ªán thao t√°c');
            });
        }

        // Toggle promotion status
        function togglePromotionStatus(promotionId) {
            fetch(`@Url.Action("ToggleStatus")?id=${promotionId}`, {
