            font-weight: bold;
            font-size: 1.1rem;
            opacity: 0.8;
        }

        .active-filters .badge a:hover {
            opacity: 1;
            transform: scale(1.2);
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .filter-form .row {
                gap: 1rem !important;
