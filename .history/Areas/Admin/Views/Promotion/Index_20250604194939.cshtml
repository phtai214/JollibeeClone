            if (selected.length === 0) {
                alert('Vui l√≤ng ch·ªçn √≠t nh·∫•t m·ªôt voucher');
                return;
            }

            if (!confirm(`B·∫°n c√≥ ch·∫Øc mu·ªën ${operation} ${selected.length} voucher ƒë√£ ch·ªçn?`)) {
                return;
            }

            fetch('@Url.Action("BulkOperation")', {
                method: 'POST',
                headers: {
