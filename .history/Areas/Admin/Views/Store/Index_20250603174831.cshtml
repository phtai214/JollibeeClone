@model IEnumerable<JollibeeClone.Areas.Admin.Models.Store>

@{
    ViewData["Title"] = "Quản lý cửa hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/store-admin.css" asp-append-version="true" />
}

<div class="store-management">
    <!-- Header với nút thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-store text-jollibee-red me-2"></i>
                Quản lý cửa hàng
            </h2>
            <p class="text-muted">Quản lý tất cả các cửa hàng Jollibee</p>
        </div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>
            Thêm cửa hàng mới
        </a>
    </div>

    <!-- Tìm kiếm và bộ lọc -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm cửa hàng...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select id="cityFilter" class="form-select">
                        <option value="">Tất cả thành phố</option>
                        @{
                            var cities = Model.Select(s => s.City).Distinct().OrderBy(c => c);
                        }
                        @foreach (var city in cities)
                        {
                            <option value="@city">@city</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="true">Hoạt động</option>
                        <option value="false">Đóng cửa</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select id="sortBy" class="form-select">
                        <option value="name">Tên A-Z</option>
                        <option value="name-desc">Tên Z-A</option>
                        <option value="city">Thành phố A-Z</option>
                        <option value="city-desc">Thành phố Z-A</option>
                    </select>
                </div>
                <div class="col-md-3 text-end">
                    <div class="view-toggle-group">
                        <button type="button" class="btn btn-outline-secondary view-btn active" data-view="grid" title="Dạng lưới">
                            <i class="fas fa-th"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary view-btn" data-view="list" title="Dạng danh sách">
                            <i class="fas fa-list"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin kết quả -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="result-count">
            Hiển thị <span id="visibleCount">@Model.Count()</span> / <span id="totalCount">@Model.Count()</span> cửa hàng
        </div>
    </div>

    <!-- Danh sách cửa hàng -->
    @if (Model.Any())
    {
        <!-- Grid View -->
        <div id="gridView" class="view-container">
            <div class="row">
                @foreach (var store in Model)
                {
                    <div class="col-xl-4 col-lg-6 col-md-12 mb-4 store-item" 
                         data-name="@store.StoreName.ToLower()"
                         data-city="@store.City"
                         data-status="@store.IsActive.ToString().ToLower()">
                        <div class="modern-store-card @(store.IsActive ? "active" : "inactive")">
                            <!-- Header Section -->
                            <div class="card-header-section">
                                <div class="store-image-wrapper">
                                    @if (!string.IsNullOrEmpty(store.ImageUrl))
                                    {
                                        <img src="@store.ImageUrl" alt="@store.StoreName" class="store-image" />
                                    }
                                    else
                                    {
                                        <div class="store-placeholder">
                                            <i class="fas fa-store"></i>
                                        </div>
                                    }
                                    <div class="image-overlay">
                                        <div class="quick-actions">
                                            <button class="action-btn view-btn" onclick="window.location.href='@Url.Action("Details", new { id = store.StoreID })'" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="action-btn edit-btn" onclick="window.location.href='@Url.Action("Edit", new { id = store.StoreID })'" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="action-btn delete-btn" onclick="window.location.href='@Url.Action("Delete", new { id = store.StoreID })'" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Status Indicator -->
                                <div class="status-indicator">
                                    <span class="status-dot @(store.IsActive ? "active" : "inactive")"></span>
                                </div>
                            </div>

                            <!-- Body Section -->
                            <div class="card-body-section">
                                <div class="store-header">
                                    <h3 class="store-title">@store.StoreName</h3>
                                    <span class="store-id">#@store.StoreID</span>
                                </div>
                                
                                <div class="store-location">
                                    <div class="location-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>@store.StreetAddress</span>
                                    </div>
                                    <div class="location-item">
                                        <i class="fas fa-city"></i>
                                        <span>@store.Ward, @store.District, @store.City</span>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(store.PhoneNumber))
                                {
                                    <div class="store-contact">
                                        <i class="fas fa-phone"></i>
                                        <span>@store.PhoneNumber</span>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(store.OpeningHours))
                                {
                                    <div class="store-hours">
                                        <i class="fas fa-clock"></i>
                                        <span>@store.OpeningHours</span>
                                    </div>
                                }
                            </div>

                            <!-- Footer Section -->
                            <div class="card-footer-section">
                                <div class="status-text">
                                    @if (store.IsActive)
                                    {
                                        <span class="status-active">
                                            <i class="fas fa-check-circle"></i>
                                            Đang hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-inactive">
                                            <i class="fas fa-times-circle"></i>
                                            Đóng cửa
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- List View -->
        <div id="listView" class="view-container" style="display: none;">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="80">Ảnh</th>
                            <th>Tên cửa hàng</th>
                            <th>Địa chỉ</th>
                            <th width="150">Thành phố</th>
                            <th width="120">Liên hệ</th>
                            <th width="100">Trạng thái</th>
                            <th width="150">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var store in Model)
                        {
                            <tr class="store-row" 
                                data-name="@store.StoreName.ToLower()"
                                data-city="@store.City"
                                data-status="@store.IsActive.ToString().ToLower()">
                                <td>
                                    @if (!string.IsNullOrEmpty(store.ImageUrl))
                                    {
                                        <div class="table-store-image">
                                            <img src="@store.ImageUrl" alt="@store.StoreName" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="no-image-small">
                                            <i class="fas fa-store"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="store-info">
                                        <h6 class="mb-1">@store.StoreName</h6>
                                        <small class="text-muted">ID: #@store.StoreID</small>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <div>@store.StreetAddress</div>
                                        <small class="text-muted">@store.Ward, @store.District</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@store.City</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(store.PhoneNumber))
                                    {
                                        <small>@store.PhoneNumber</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (store.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>
                                            Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-times me-1"></i>
                                            Đóng cửa
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = store.StoreID })" 
                                           class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = store.StoreID })" 
                                           class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = store.StoreID })" 
                                           class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-store"></i>
            </div>
            <h4>Chưa có cửa hàng nào</h4>
            <p>Bắt đầu bằng cách thêm cửa hàng đầu tiên</p>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Thêm cửa hàng đầu tiên
            </a>
        </div>
    }
</div>

@section Scripts {
<script>
$(document).ready(function() {
    let currentView = 'grid';
    
    // View Toggle
    $('.view-btn').on('click', function() {
        const view = $(this).data('view');
        if (view === currentView) return;
        
        $('.view-btn').removeClass('active');
        $(this).addClass('active');
        
        if (view === 'grid') {
            $('#listView').hide();
            $('#gridView').show();
            currentView = 'grid';
        } else {
            $('#gridView').hide();
            $('#listView').show();
            currentView = 'list';
        }
    });
    
    // Search functionality
    $('#searchInput').on('input', function() {
        filterStores();
    });

    // City filter
    $('#cityFilter').on('change', function() {
        filterStores();
    });

    // Status filter
    $('#statusFilter').on('change', function() {
        filterStores();
    });
    
    // Sort functionality
    $('#sortBy').on('change', function() {
        sortStores();
    });

    function filterStores() {
        var searchTerm = $('#searchInput').val().toLowerCase();
        var cityFilter = $('#cityFilter').val();
        var statusFilter = $('#statusFilter').val();
        var visibleCount = 0;

        $('.store-item, .store-row').each(function() {
            var item = $(this);
            var name = item.data('name');
            var city = item.data('city');
            var status = item.data('status').toString();

            var showItem = true;

            // Check search term
            if (searchTerm && name.indexOf(searchTerm) === -1) {
                showItem = false;
            }

            // Check city filter
            if (cityFilter && city !== cityFilter) {
                showItem = false;
            }

            // Check status filter
            if (statusFilter && status !== statusFilter) {
                showItem = false;
            }

            if (showItem) {
                item.removeClass('hidden').show();
                visibleCount++;
            } else {
                item.addClass('hidden').hide();
            }
        });
        
        // Update result count
        $('#visibleCount').text(visibleCount);
    }
    
    function sortStores() {
        var sortBy = $('#sortBy').val();
        var container = currentView === 'grid' ? $('#gridView .row') : $('#listView tbody');
        var items = container.find(currentView === 'grid' ? '.store-item' : '.store-row');
        
        items.sort(function(a, b) {
            var aVal, bVal;
            
            switch(sortBy) {
                case 'name':
                    aVal = $(a).data('name');
                    bVal = $(b).data('name');
                    return aVal.localeCompare(bVal);
                    
                case 'name-desc':
                    aVal = $(a).data('name');
                    bVal = $(b).data('name');
                    return bVal.localeCompare(aVal);
                    
                case 'city':
                    aVal = $(a).data('city');
                    bVal = $(b).data('city');
                    return aVal.localeCompare(bVal);
                    
                case 'city-desc':
                    aVal = $(a).data('city');
                    bVal = $(b).data('city');
                    return bVal.localeCompare(aVal);
                    
                default:
                    return 0;
            }
        });
        
        container.html(items);
    }
});
</script>
} 