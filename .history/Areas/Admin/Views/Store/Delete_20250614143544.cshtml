@model JollibeeClone.Models.Store

@{
    ViewData["Title"] = "Xóa cửa hàng";
}

@section Styles {
    <link rel="stylesheet" href="~/css/store-admin.css" asp-append-version="true" />
}

<div class="store-delete">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-trash text-danger me-2"></i>
                Xóa cửa hàng
            </h2>
            <p class="text-muted">Xác nhận xóa cửa hàng khỏi hệ thống</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger border-0" role="alert">
        <div class="d-flex align-items-center">
            <div class="alert-icon me-3">
                <i class="fas fa-exclamation-triangle fa-2x"></i>
            </div>
            <div>
                <h5 class="alert-heading mb-1">Cảnh báo!</h5>
                <p class="mb-0">
                    Bạn có chắc chắn muốn xóa cửa hàng này? Hành động này không thể hoàn tác.
                    Tất cả dữ liệu liên quan đến cửa hàng sẽ bị mất vĩnh viễn.
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Store Information -->
        <div class="col-lg-8">
            <!-- Store Details Preview -->
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-store me-2"></i>
                        Thông tin cửa hàng sẽ bị xóa
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Tên cửa hàng:</label>
                            <div class="info-display">
                                <i class="fas fa-store text-primary me-2"></i>
                                @Model.StoreName
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Trạng thái:</label>
                            <div class="info-display">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                    <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                    @(Model.IsActive ? "Đang hoạt động" : "Tạm dừng")
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label class="form-label fw-bold">Địa chỉ đầy đủ:</label>
                            <div class="info-display">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                @Model.StreetAddress@(!string.IsNullOrEmpty(Model.Ward) ? ", " + Model.Ward : ""), @Model.District, @Model.City
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PhoneNumber) || !string.IsNullOrEmpty(Model.OpeningHours))
                    {
                        <div class="row mb-3">
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Số điện thoại:</label>
                                    <div class="info-display">
                                        <i class="fas fa-phone text-success me-2"></i>
                                        @Model.PhoneNumber
                                    </div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.OpeningHours))
                            {
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Giờ mở cửa:</label>
                                    <div class="info-display">
                                        <i class="fas fa-clock text-info me-2"></i>
                                        @Model.OpeningHours
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Impact Information -->
            <div class="card mt-4 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Tác động của việc xóa
                    </h5>
                </div>
                <div class="card-body">
                    <div class="impact-list">
                        <div class="impact-item">
                            <i class="fas fa-times-circle text-danger me-2"></i>
                            <span>Thông tin cửa hàng sẽ bị xóa vĩnh viễn</span>
                        </div>
                        <div class="impact-item">
                            <i class="fas fa-times-circle text-danger me-2"></i>
                            <span>Không thể khôi phục dữ liệu sau khi xóa</span>
                        </div>
                        <div class="impact-item">
                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                            <span>Các đơn hàng liên quan (nếu có) sẽ bị ảnh hưởng</span>
                        </div>
                        <div class="impact-item">
                            <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                            <span>Khách hàng sẽ không thể tìm thấy cửa hàng này</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input asp-for="StoreID" type="hidden" />
                    <button type="submit" class="btn btn-danger btn-lg me-3" onclick="return confirmDelete()">
                        <i class="fas fa-trash me-2"></i>
                        Xác nhận xóa cửa hàng
                    </button>
                </form>
                <a href="@Url.Action("Details", new { id = Model.StoreID })" class="btn btn-outline-info btn-lg me-2">
                    <i class="fas fa-eye me-2"></i>
                    Xem chi tiết
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>
                    Hủy bỏ
                </a>
            </div>
        </div>

        <!-- Right Sidebar -->
        <div class="col-lg-4">
            <!-- Store Image Preview -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh cửa hàng
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="store-image-preview">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.StoreName" class="preview-image" 
                                 onerror="this.onerror=null; this.src='/assets/images/bee.png';" />
                            <div class="image-overlay">
                                <span class="badge bg-danger">
                                    <i class="fas fa-trash me-1"></i>
                                    Sẽ bị xóa
                                </span>
                            </div>
                        }
                        else
                        {
                            <div class="no-image-preview">
                                <i class="fas fa-store fa-3x text-muted mb-2"></i>
                                <p class="text-muted">Không có hình ảnh</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Address Summary -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Thông tin địa chỉ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="address-summary">
                        <div class="address-item">
                            <i class="fas fa-city text-primary me-2"></i>
                            <strong>Tỉnh/Thành phố:</strong> @Model.City
                        </div>
                        <div class="address-item">
                            <i class="fas fa-map text-warning me-2"></i>
                            <strong>Quận/Huyện:</strong> @Model.District
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Ward))
                        {
                            <div class="address-item">
                                <i class="fas fa-map-pin text-secondary me-2"></i>
                                <strong>Phường/Xã:</strong> @Model.Ward
                            </div>
                        }
                        <div class="address-item">
                            <i class="fas fa-road text-info me-2"></i>
                            <strong>Địa chỉ:</strong> @Model.StreetAddress
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alternative Actions -->
            <div class="card mt-3 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-lightbulb me-2"></i>
                        Thay vào đó, bạn có thể:
                    </h6>
                </div>
                <div class="card-body">
                    <div class="alternative-actions">
                        <a href="@Url.Action("Edit", new { id = Model.StoreID })" class="alternative-action">
                            <i class="fas fa-edit text-warning me-2"></i>
                            <span>Chỉnh sửa thông tin cửa hàng</span>
                        </a>
                        <div class="alternative-action" onclick="toggleStoreStatus()">
                            <i class="fas @(Model.IsActive ? "fa-pause" : "fa-play") text-@(Model.IsActive ? "warning" : "success") me-2"></i>
                            <span>@(Model.IsActive ? "Tạm dừng hoạt động" : "Kích hoạt lại cửa hàng")</span>
                        </div>
                        <a href="@Url.Action("Details", new { id = Model.StoreID })" class="alternative-action">
                            <i class="fas fa-eye text-info me-2"></i>
                            <span>Xem thÃ´ng tin chi tiáº¿t</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Support -->
            <div class="card mt-3 border-secondary">
                <div class="card-body text-center">
                    <i class="fas fa-question-circle fa-2x text-muted mb-2"></i>
                    <h6>Cáº§n há»— trá»£?</h6>
                    <p class="text-muted small">
                        Náº¿u báº¡n khÃ´ng cháº¯c cháº¯n vá» viá»‡c xÃ³a cá»­a hÃ ng nÃ y, 
                        hÃ£y liÃªn há»‡ vá»›i bá»™ pháº­n há»— trá»£ ká»¹ thuáº­t.
                    </p>
                    <button type="button" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-envelope me-1"></i>
                        LiÃªn há»‡ há»— trá»£
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

