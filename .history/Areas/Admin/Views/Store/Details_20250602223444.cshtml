@model JollibeeClone.Areas.Admin.Models.Store

@{
    ViewData["Title"] = "Chi tiết cửa hàng";
}

<div class="store-details">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-store text-jollibee-red me-2"></i>
                Chi tiết cửa hàng
            </h2>
            <p class="text-muted">Thông tin chi tiết về cửa hàng: <strong>@Model.StoreName</strong></p>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("Edit", new { id = Model.StoreID })" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>
                Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Store Information -->
        <div class="col-lg-8">
            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin cơ bản
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tên cửa hàng:</label>
                            <div class="info-value">
                                <i class="fas fa-store text-jollibee-red me-2"></i>
                                @Model.StoreName
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Trạng thái:</label>
                            <div class="info-value">
                                <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6">
                                    <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                    @(Model.IsActive ? "Đang hoạt động" : "Tạm dừng hoạt động")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Thông tin địa chỉ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold">Địa chỉ đường:</label>
                            <div class="info-value">
                                <i class="fas fa-road text-info me-2"></i>
                                @Model.StreetAddress
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.Ward))
                        {
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Phường/Xã:</label>
                                <div class="info-value">
                                    <i class="fas fa-map-pin text-secondary me-2"></i>
                                    @Model.Ward
                                </div>
                            </div>
                        }
                        <div class="col-md-@(!string.IsNullOrEmpty(Model.Ward) ? "4" : "6") mb-3">
                            <label class="form-label fw-bold">Quận/Huyện:</label>
                            <div class="info-value">
                                <i class="fas fa-map text-warning me-2"></i>
                                @Model.District
                            </div>
                        </div>
                        <div class="col-md-@(!string.IsNullOrEmpty(Model.Ward) ? "4" : "6") mb-3">
                            <label class="form-label fw-bold">Thành phố:</label>
                            <div class="info-value">
                                <i class="fas fa-city text-primary me-2"></i>
                                @Model.City
                            </div>
                        </div>
                    </div>
                    
                    <!-- Full Address Display -->
                    <div class="full-address-display">
                        <label class="form-label fw-bold">Địa chỉ đầy đủ:</label>
                        <div class="address-card">
                            <i class="fas fa-map-marker-alt text-jollibee-red me-2"></i>
                            <span>@Model.StreetAddress@(!string.IsNullOrEmpty(Model.Ward) ? ", " + Model.Ward : ""), @Model.District, @Model.City</span>
                            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                            {
                                <button type="button" class="btn btn-sm btn-outline-primary ms-2" id="showOnMapBtn">
                                    <i class="fas fa-map-marked-alt me-1"></i>
                                    Xem trên bản đồ
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-phone me-2"></i>
                        Thông tin liên hệ
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số điện thoại:</label>
                            <div class="info-value">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <i class="fas fa-phone text-success me-2"></i>
                                    <a href="tel:@Model.PhoneNumber" class="text-decoration-none">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-minus me-2"></i>
                                        Chưa có thông tin
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Giờ mở cửa:</label>
                            <div class="info-value">
                                @if (!string.IsNullOrEmpty(Model.OpeningHours))
                                {
                                    <i class="fas fa-clock text-info me-2"></i>
                                    @Model.OpeningHours
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="fas fa-minus me-2"></i>
                                        Chưa có thông tin
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- GPS Coordinates -->
            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-globe me-2"></i>
                            Tọa độ GPS
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Vĩ độ (Latitude):</label>
                                <div class="info-value">
                                    <i class="fas fa-compass text-primary me-2"></i>
                                    @Model.Latitude.Value.ToString("F6")
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Kinh độ (Longitude):</label>
                                <div class="info-value">
                                    <i class="fas fa-compass text-primary me-2"></i>
                                    @Model.Longitude.Value.ToString("F6")
                                </div>
                            </div>
                        </div>
                        <div class="coordinates-actions">
                            <button type="button" class="btn btn-outline-primary" id="copyCoordinates">
                                <i class="fas fa-copy me-1"></i>
                                Sao chép tọa độ
                            </button>
                            <a href="https://www.google.com/maps?q=@Model.Latitude,@Model.Longitude" 
                               target="_blank" class="btn btn-outline-success">
                                <i class="fab fa-google me-1"></i>
                                Mở Google Maps
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Sidebar -->
        <div class="col-lg-4">
            <!-- Store Image -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-image me-2"></i>
                        Hình ảnh cửa hàng
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="store-image-container">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.StoreName" class="store-image-large" 
                                 onerror="this.onerror=null; this.src='/assets/images/bee.png';" />
                            <div class="image-actions">
                                <button type="button" class="btn btn-sm btn-dark" onclick="viewImageFullscreen('@Model.ImageUrl')">
                                    <i class="fas fa-expand me-1"></i>
                                    Xem toàn màn hình
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="no-image-placeholder">
                                <i class="fas fa-store fa-4x text-muted mb-3"></i>
                                <p class="text-muted">Chưa có hình ảnh cửa hàng</p>
                                <a href="@Url.Action("Edit", new { id = Model.StoreID })" class="btn btn-outline-primary">
                                    <i class="fas fa-plus me-1"></i>
                                    Thêm ảnh
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Map Preview -->
            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-map-marked-alt me-2"></i>
                            Vị trí trên bản đồ
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div id="mapPreview" style="height: 250px; width: 100%;"></div>
                        <div class="map-actions p-3">
                            <button type="button" class="btn btn-primary btn-sm" id="viewFullMap">
                                <i class="fas fa-expand me-1"></i>
                                Xem bản đồ lớn
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" id="getDirections">
                                <i class="fas fa-route me-1"></i>
                                Chỉ đường
                            </button>
                        </div>
                    </div>
                </div>
            }

            <!-- Quick Stats -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="quick-stat">
                        <div class="stat-icon">
                            <i class="fas fa-shopping-cart text-success"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Đơn hàng hôm nay</div>
                            <div class="stat-value">-</div>
                        </div>
                    </div>
                    <div class="quick-stat">
                        <div class="stat-icon">
                            <i class="fas fa-dollar-sign text-warning"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Doanh thu tháng</div>
                            <div class="stat-value">-</div>
                        </div>
                    </div>
                    <div class="quick-stat">
                        <div class="stat-icon">
                            <i class="fas fa-users text-info"></i>
                        </div>
                        <div class="stat-info">
                            <div class="stat-label">Khách hàng thường xuyên</div>
                            <div class="stat-value">-</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Modal -->
<div class="modal fade" id="mapModal" tabindex="-1" aria-labelledby="mapModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mapModalLabel">
                    <i class="fas fa-map-marked-alt me-2"></i>
                    Vị trí cửa hàng: @Model.StoreName
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="fullMap" style="height: 500px; width: 100%;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <a href="https://www.google.com/maps?q=@(Model.Latitude),@(Model.Longitude)" 
                   target="_blank" class="btn btn-primary">
                    <i class="fab fa-google me-1"></i>
                    Mở Google Maps
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Image Fullscreen Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">@Model.StoreName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-0">
                <img id="fullscreenImage" src="" alt="@Model.StoreName" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
            {
                <text>
                // Initialize map preview
                if (typeof google !== 'undefined') {
                    const mapPreview = new google.maps.Map(document.getElementById('mapPreview'), {
                        zoom: 15,
                        center: { lat: @Model.Latitude, lng: @Model.Longitude }
                    });
                    
                    const marker = new google.maps.Marker({
                        position: { lat: @Model.Latitude, lng: @Model.Longitude },
                        map: mapPreview,
                        title: '@Model.StoreName'
                    });

                    // Add info window
                    const infoWindow = new google.maps.InfoWindow({
                        content: `
                            <div style="max-width: 250px;">
                                <h6>@Model.StoreName</h6>
                                <p>@Model.StreetAddress@(!string.IsNullOrEmpty(Model.Ward) ? ", " + Model.Ward : ""), @Model.District, @Model.City</p>
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <text><p><i class="fas fa-phone"></i> @Model.PhoneNumber</p></text>
                                }
                                @if (!string.IsNullOrEmpty(Model.OpeningHours))
                                {
                                    <text><p><i class="fas fa-clock"></i> @Model.OpeningHours</p></text>
                                }
                            </div>
                        `
                    });

                    marker.addListener('click', function() {
                        infoWindow.open(mapPreview, marker);
                    });

                    // Auto open info window
                    setTimeout(function() {
                        infoWindow.open(mapPreview, marker);
                    }, 1000);
                }
                </text>
            }

            // Show on map button
            $('#showOnMapBtn, #viewFullMap').on('click', function() {
                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                {
                    <text>
                    $('#mapModal').modal('show');
                    
                    $('#mapModal').on('shown.bs.modal', function() {
                        if (typeof google !== 'undefined') {
                            const fullMap = new google.maps.Map(document.getElementById('fullMap'), {
                                zoom: 15,
                                center: { lat: @Model.Latitude, lng: @Model.Longitude }
                            });
                            
                            const marker = new google.maps.Marker({
                                position: { lat: @Model.Latitude, lng: @Model.Longitude },
                                map: fullMap,
                                title: '@Model.StoreName'
                            });

                            const infoWindow = new google.maps.InfoWindow({
                                content: `
                                    <div style="max-width: 250px;">
                                        <h6>@Model.StoreName</h6>
                                        <p>@Model.StreetAddress@(!string.IsNullOrEmpty(Model.Ward) ? ", " + Model.Ward : ""), @Model.District, @Model.City</p>
                                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                        {
                                            <text><p><i class="fas fa-phone"></i> @Model.PhoneNumber</p></text>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.OpeningHours))
                                        {
                                            <text><p><i class="fas fa-clock"></i> @Model.OpeningHours</p></text>
                                        }
                                    </div>
                                `
                            });

                            marker.addListener('click', function() {
                                infoWindow.open(fullMap, marker);
                            });

                            // Auto open info window
                            setTimeout(function() {
                                infoWindow.open(fullMap, marker);
                            }, 500);
                        }
                    });
                    </text>
                }
            });

            // Copy coordinates
            $('#copyCoordinates').on('click', function() {
                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                {
                    <text>
                    const coordinates = '@Model.Latitude.Value.ToString("F6"),@Model.Longitude.Value.ToString("F6")';
                    navigator.clipboard.writeText(coordinates).then(function() {
                        const btn = $('#copyCoordinates');
                        const originalText = btn.html();
                        btn.html('<i class="fas fa-check me-1"></i>Đã sao chép!').removeClass('btn-outline-primary').addClass('btn-success');
                        
                        setTimeout(function() {
                            btn.html(originalText).removeClass('btn-success').addClass('btn-outline-primary');
                        }, 2000);
                    });
                    </text>
                }
            });

            // Get directions
            $('#getDirections').on('click', function() {
                @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                {
                    <text>
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(function(position) {
                            const url = `https://www.google.com/maps/dir/${position.coords.latitude},${position.coords.longitude}/@Model.Latitude,@Model.Longitude`;
                            window.open(url, '_blank');
                        }, function() {
                            const url = `https://www.google.com/maps/dir//@Model.Latitude,@Model.Longitude`;
                            window.open(url, '_blank');
                        });
                    } else {
                        const url = `https://www.google.com/maps/dir//@Model.Latitude,@Model.Longitude`;
                        window.open(url, '_blank');
                    }
                    </text>
                }
            });
        });

        function viewImageFullscreen(imageUrl) {
            $('#fullscreenImage').attr('src', imageUrl);
            $('#imageModal').modal('show');
        }
    </script>
}

@section Styles {
    <style>
        .info-value {
            padding: 8px 12px;
            background-color: #f8f9fa;
            border-radius: 6px;
            border-left: 3px solid #dc2626;
            font-size: 1rem;
        }

        .full-address-display {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }

        .address-card {
            padding: 15px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 8px;
            border-left: 4px solid #dc2626;
            font-size: 1.1rem;
        }

        .store-image-container {
            position: relative;
        }

        .store-image-large {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .image-actions {
            position: absolute;
            bottom: 10px;
            right: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .store-image-container:hover .image-actions {
            opacity: 1;
        }

        .no-image-placeholder {
            height: 300px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #f8f9fa;
            color: #6c757d;
        }

        .quick-stat {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid #e9ecef;
        }

        .quick-stat:last-child {
            border-bottom: none;
        }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
        }

        .stat-icon i {
            font-size: 1.25rem;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 2px;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 600;
            color: #2d3748;
        }

        .coordinates-actions {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }

        .map-actions {
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }

        .text-jollibee-red {
            color: #dc2626 !important;
        }

        .btn-primary {
            background-color: #dc2626;
            border-color: #dc2626;
        }

        .btn-primary:hover {
            background-color: #b91c1c;
            border-color: #b91c1c;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
        }

        #fullscreenImage {
            max-height: 80vh;
        }
    </style>
} 