@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script src="~/js/address-selector.js" asp-append-version="true"></script>
    
    <script>
        $(document).ready(function() {
            let currentImageFile = null;
            let removeCurrentImage = false;

            // Store current values
            const currentCity = '@Model.City';
            const currentDistrict = '@Model.District';
            const currentWard = '@Model.Ward';

            // Image upload handling
            $('#imageFile').on('change', function(e) {
                handleImageSelection(e.target.files[0]);
            });

            // Drag and drop
            $('#fileUploadArea').on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('drag-over');
            });

            $('#fileUploadArea').on('dragleave', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
            });

            $('#fileUploadArea').on('drop', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    handleImageSelection(files[0]);
                }
            });

            // Change current image button
            $('#changeCurrentImage').on('click', function() {
                $('#imageFile').click();
            });

            // Remove current image button
            $('#removeCurrentImage').on('click', function() {
                if (confirm('Báº¡n cÃ³ cháº¯c muá»‘n xÃ³a áº£nh hiá»‡n táº¡i?')) {
                    $('#currentImageSection').hide();
                    $('#fileUploadArea').show();
                    removeCurrentImage = true;
                    
                    // Update store preview
                    $('#storePreviewImage').html('<div class="no-image"><i class="fas fa-store fa-2x"></i></div>');
                }
            });

            // Change new image button
            $('#changeImage').on('click', function() {
                $('#imageFile').click();
            });

            // Remove new image button
            $('#removeImage').on('click', function() {
                removeNewImage();
            });

            function handleImageSelection(file) {
                if (!file) return;

                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('Vui lÃ²ng chá»n file áº£nh há»£p lá»‡.');
                    return;
                }

                // Validate file size (2MB)
                if (file.size > 2 * 1024 * 1024) {
                    alert('File áº£nh khÃ´ng Ä‘Æ°á»£c vÆ°á»£t quÃ¡ 2MB.');
                    return;
                }

                currentImageFile = file;
                
                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    showNewImagePreview(e.target.result);
                };
                reader.readAsDataURL(file);
            }

            function showNewImagePreview(imageSrc) {
                $('#previewImg').attr('src', imageSrc);
                $('#fileUploadArea').hide();
                $('#currentImageSection').hide();
                $('#imagePreview').show();
                
                // Update store preview
                $('#storePreviewImage').html('<img src="' + imageSrc + '" alt="Store Preview" style="width: 100%; height: 120px; object-fit: cover; border-radius: 8px;">');
            }

            function removeNewImage() {
                currentImageFile = null;
                $('#imageFile').val('');
                $('#imagePreview').hide();
                
                // Show appropriate section
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <text>
                    if (!removeCurrentImage) {
                        $('#currentImageSection').show();
                        $('#storePreviewImage').html('<img src="@Model.ImageUrl" alt="Store Preview" style="width: 100%; height: 120px; object-fit: cover; border-radius: 8px;">');
                    } else {
                        $('#fileUploadArea').show();
                        $('#storePreviewImage').html('<div class="no-image"><i class="fas fa-store fa-2x"></i></div>');
                    }
                    </text>
                }
                else
                {
                    <text>
                    $('#fileUploadArea').show();
                    $('#storePreviewImage').html('<div class="no-image"><i class="fas fa-store fa-2x"></i></div>');
                    </text>
                }
            }

            // Form submission
            $('#storeForm').on('submit', function(e) {
                // Create FormData
                const formData = new FormData(this);
                
                // Handle image file
                if (currentImageFile) {
                    formData.delete('imageFile');
                    formData.append('imageFile', currentImageFile);
                }
                
                // Handle remove image flag
                if (removeCurrentImage) {
                    formData.append('removeImage', 'true');
                }
                
                // Update hidden address fields
                const cityText = $('#citySelect option:selected').text();
                const districtText = $('#districtSelect option:selected').text();
                const wardValue = $('#wardSelect').val();
                
                if (cityText && cityText !== 'Chá»n tá»‰nh/thÃ nh phá»‘...' && cityText !== 'Äang táº£i...') {
                    formData.set('City', cityText);
                }
                
                if (districtText && districtText !== 'Chá»n quáº­n/huyá»‡n...' && districtText !== 'Äang táº£i...') {
                    formData.set('District', districtText);
                }
                
                if (wardValue && wardValue !== '') {
                    formData.set('Ward', wardValue);
                }

                // Submit via AJAX if there are file changes
                if (currentImageFile || removeCurrentImage) {
                    e.preventDefault();
                    
                    $.ajax({
                        url: $(this).attr('action'),
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Index")';
                            } else {
                                // Handle validation errors
                                if (response.errors) {
                                    console.error('Validation errors:', response.errors);
                                }
                            }
                        },
                        error: function() {
                            alert('CÃ³ lá»—i xáº£y ra khi cáº­p nháº­t cá»­a hÃ ng.');
                        }
                    });
                }
            });

            // Live preview updates
            $('#StoreName').on('input', function() {
                const value = $(this).val() || '@Model.StoreName';
                $('#previewStoreName').text(value);
            });

            $('#StreetAddress, #Ward, #District, #City').on('input change', function() {
                updateAddressPreview();
            });

            $('#PhoneNumber').on('input', function() {
                const value = $(this).val();
                if (value) {
                    $('#previewPhone span').text(value);
                    $('#previewPhone').show();
                } else {
                    $('#previewPhone').hide();
                }
            });

            $('#OpeningHours').on('input', function() {
                const value = $(this).val();
                if (value) {
                    $('#previewHours span').text(value);
                    $('#previewHours').show();
                } else {
                    $('#previewHours').hide();
                }
            });

            function updateAddressPreview() {
                const street = $('#StreetAddress').val();
                const ward = $('#Ward').val();
                const district = $('#District').val();
                const city = $('#City').val();

                let address = '';
                if (street) address += street;
                if (ward) address += (address ? ', ' : '') + ward;
                if (district) address += (address ? ', ' : '') + district;
                if (city) address += (address ? ', ' : '') + city;

                $('#previewAddress').text(address || 'Äá»‹a chá»‰ sáº½ hiá»ƒn thá»‹ á»Ÿ Ä‘Ã¢y');
            }

            // Initialize address selectors and load current values
            initializeAddressSelectors(currentCity, currentDistrict, currentWard);
        });
    </script>
} 

