@section Scripts {
    <script src="~/js/address-selector.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Initialize address selectors
            initializeAddressSelectors();
            
            // Image upload handling
            $('#imageFile').on('change', function(e) {
                handleImageSelection(e.target.files[0]);
            });

            // Drag and drop
            $('#fileUploadArea').on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('drag-over');
            });

            $('#fileUploadArea').on('dragleave', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
            });

            $('#fileUploadArea').on('drop', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    $('#imageFile')[0].files = files;
                    handleImageSelection(files[0]);
                }
            });

            // Click to select file
            $('#fileUploadArea').on('click', function() {
                $('#imageFile').click();
            });

            // Change image button
            $('#changeImage').on('click', function() {
                $('#imageFile').click();
            });

            // Remove image button
            $('#removeImage').on('click', function() {
                removeImage();
            });

            function handleImageSelection(file) {
                if (!file) return;

                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('Vui lÃ²ng chá»n file áº£nh há»£p lá»‡.');
                    $('#imageFile').val('');
                    return;
                }

                // Validate file size (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File áº£nh khÃ´ng Ä‘Æ°á»£c vÆ°á»£t quÃ¡ 5MB.');
                    $('#imageFile').val('');
                    return;
                }

                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    showImagePreview(e.target.result);
                };
                reader.readAsDataURL(file);
            }

            function showImagePreview(imageSrc) {
                $('#previewImg').attr('src', imageSrc);
                $('#fileUploadArea').hide();
                $('#imagePreview').show();
                
                // Update store preview
                $('#storePreviewImage').html('<img src="' + imageSrc + '" alt="Store Preview" style="width: 100%; height: 120px; object-fit: cover; border-radius: 8px;">');
            }

            function removeImage() {
                $('#imageFile').val('');
                $('#imagePreview').hide();
                $('#fileUploadArea').show();
                
                // Reset store preview
                $('#storePreviewImage').html('<div class="no-image"><i class="fas fa-store fa-2x"></i></div>');
            }

            // Form submission
            $('#createStoreForm').on('submit', function(e) {
                // Add loading state
                const submitBtn = $(this).find('button[type="submit"]');
                const originalText = submitBtn.html();
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Äang lÆ°u...');
                
                // Allow normal form submission - let server handle success/error messages
                return true;
            });

            // Live preview updates
            $('#StoreName').on('input', function() {
                const value = $(this).val() || 'TÃªn cá»­a hÃ ng...';
                $('#previewStoreName').text(value);
            });

            $('#StreetAddress, #Ward, #District, #City').on('input change', function() {
                updateAddressPreview();
            });

            $('#PhoneNumber').on('input', function() {
                const value = $(this).val();
                if (value) {
                    $('#previewPhone span').text(value);
                    $('#previewPhone').show();
                } else {
                    $('#previewPhone').hide();
                }
            });

            $('#OpeningHours').on('input', function() {
                const value = $(this).val();
                if (value) {
                    $('#previewHours span').text(value);
                    $('#previewHours').show();
                } else {
                    $('#previewHours').hide();
                }
            });

            function updateAddressPreview() {
                const street = $('#StreetAddress').val();
                const ward = $('#Ward').val();
                const district = $('#District').val();
                const city = $('#City').val();

                let address = '';
                if (street) address += street;
                if (ward) address += (address ? ', ' : '') + ward;
                if (district) address += (address ? ', ' : '') + district;
                if (city) address += (address ? ', ' : '') + city;

                $('#previewAddress').text(address || 'Äá»‹a chá»‰ sáº½ hiá»ƒn thá»‹ á»Ÿ Ä‘Ã¢y');
            }

            // Show toast notification
            function showToast(message, type = 'success') {
                const toastHtml = `
                    <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0" role="alert">
                        <div class="d-flex">
                            <div class="toast-body">
                                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                                ${message}
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                `;
                
                // Create toast container if it doesn't exist
                if (!$('#toastContainer').length) {
                    $('body').append('<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 11"></div>');
                }
                
                const $toast = $(toastHtml);
                $('#toastContainer').append($toast);
                
                const toast = new bootstrap.Toast($toast[0], {
                    autohide: true,
                    delay: 4000
                });
                toast.show();
                
                // Remove toast element after hiding
                $toast[0].addEventListener('hidden.bs.toast', function() {
                    $toast.remove();
                });
            }

            // Form validation feedback
            $('input[required], select[required]').on('blur', function() {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });
        });
    </script>
} 

