@model JollibeeClone.Models.Service

@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="service-details">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-eye text-jollibee-red me-2"></i>
                Chi tiết dịch vụ
            </h2>
            <p class="text-muted">Xem thông tin chi tiết dịch vụ</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Edit", new { id = Model.ServiceID })" class="btn btn-warning me-2">
                <i class="fas fa-edit me-2"></i>
                Chỉnh sửa
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Nội dung chính -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <!-- Tiêu đề -->
                    <div class="mb-4">
                        <h1 class="display-6 fw-bold text-dark">@Model.ServiceName</h1>
                        
                        <!-- Meta info -->
                        <div class="meta-info d-flex flex-wrap align-items-center gap-3 mt-3">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") fs-6">
                                <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                @(Model.IsActive ? "Đang hoạt động" : "Tạm dừng")
                            </span>
                            <span class="badge bg-info fs-6">
                                <i class="fas fa-sort-numeric-up me-1"></i>
                                Thứ tự: @Model.DisplayOrder
                            </span>
                        </div>
                    </div>

                    <!-- Hình ảnh -->
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-4">
                            <div class="service-image-container">
                                <img src="@Model.ImageUrl" alt="@Model.ServiceName" class="img-fluid rounded shadow-sm" />
                            </div>
                        </div>
                    }

                    <!-- Mô tả ngắn -->
                    @if (!string.IsNullOrEmpty(Model.ShortDescription))
                    {
                        <div class="mb-4">
                            <div class="alert alert-light border-start border-5 border-info">
                                <h6 class="fw-bold mb-2">
                                    <i class="fas fa-quote-left text-info me-2"></i>
                                    Mô tả ngắn
                                </h6>
                                <p class="mb-0 fs-6 text-muted">@Model.ShortDescription</p>
                            </div>
                        </div>
                    }

                    <!-- Nội dung -->
                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        <div class="service-content">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-align-left text-primary me-2"></i>
                                Nội dung chi tiết
                            </h6>
                            <div class="content-text">
                                @Html.Raw(Html.Encode(Model.Content).Replace("\n", "<br/>"))
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Thông tin tóm tắt -->
