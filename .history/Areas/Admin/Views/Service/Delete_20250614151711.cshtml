@model JollibeeClone.Models.Service

@{
    ViewData["Title"] = "Xóa dịch vụ";
}

<div class="service-delete">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-trash text-danger me-2"></i>
                Xóa dịch vụ
            </h2>
            <p class="text-muted">Xác nhận xóa dịch vụ khỏi hệ thống</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger border-0 shadow-sm mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Cảnh báo!</h5>
                <p class="mb-0">Hành động này sẽ xóa vĩnh viễn dịch vụ và không thể hoàn tác. Bạn có chắc chắn muốn tiếp tục?</p>
            </div>
        </div>
    </div>

    <!-- Service Preview -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-concierge-bell me-2"></i>
                        Dịch vụ sẽ bị xóa
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4">
                                <div class="service-image-preview">
                                    <img src="@Model.ImageUrl" alt="@Model.ServiceName" class="img-fluid rounded" />
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="service-info">
                                    <h4 class="fw-bold text-dark mb-3">@Model.ServiceName</h4>
                                    
                                    @if (!string.IsNullOrEmpty(Model.ShortDescription))
                                    {
                                        <p class="text-muted mb-3">@Model.ShortDescription</p>
                                    }
                                    
                                    <div class="meta-info">
                                        <div class="row g-3">
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">ID:</label>
                                                    <div class="fw-bold">#@Model.ServiceID</div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Trạng thái:</label>
                                                    <div>
                                                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                            <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                                            @(Model.IsActive ? "Đang hoạt động" : "Tạm dừng")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Thứ tự hiển thị:</label>
                                                    <div class="fw-bold">@Model.DisplayOrder</div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Có nội dung:</label>
                                                    <div class="fw-bold">
                                                        @if (!string.IsNullOrEmpty(Model.Content))
                                                        {
                                                            <span class="text-success">
                                                                <i class="fas fa-check me-1"></i>
                                                                Có
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">
                                                                <i class="fas fa-times me-1"></i>
                                                                Không
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="service-info">
                                    <h4 class="fw-bold text-dark mb-3">@Model.ServiceName</h4>
                                    
                                    @if (!string.IsNullOrEmpty(Model.ShortDescription))
                                    {
                                        <p class="text-muted mb-3">@Model.ShortDescription</p>
                                    }
                                    
                                    <div class="meta-info">
                                        <div class="row g-3">
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">ID:</label>
                                                    <div class="fw-bold">#@Model.ServiceID</div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Trạng thái:</label>
                                                    <div>
                                                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                            <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-pause-circle") me-1"></i>
                                                            @(Model.IsActive ? "Đang hoạt động" : "Tạm dừng")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Thứ tự hiển thị:</label>
                                                    <div class="fw-bold">@Model.DisplayOrder</div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="info-item">
                                                    <label class="text-muted small">Có nội dung:</label>
                                                    <div class="fw-bold">
                                                        @if (!string.IsNullOrEmpty(Model.Content))
                                                        {
                                                            <span class="text-success">
                                                                <i class="fas fa-check me-1"></i>
                                                                Có
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">
                                                                <i class="fas fa-times me-1"></i>
                                                                Không
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input asp-for="ServiceID" type="hidden" />
                    
                    <button type="submit" class="btn btn-danger btn-lg me-3" onclick="return confirmDelete()">
                        <i class="fas fa-trash me-2"></i>
                        Xác nhận xóa
                    </button>
                </form>
                
                <a href="@Url.Action("Details", new { id = Model.ServiceID })" class="btn btn-outline-info btn-lg me-3">
                    <i class="fas fa-eye me-2"></i>
                    Xem chi tiáº¿t
                </a>
                
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-times me-2"></i>
                    Há»§y bá»
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            var serviceName = @Html.Raw(Json.Serialize(Model.ServiceName));
            return confirm('Báº¡n cÃ³ cháº¯c cháº¯n muá»‘n xÃ³a dá»‹ch vá»¥ "' + serviceName + '"?\n\nHÃ nh Ä‘á»™ng nÃ y khÃ´ng thá»ƒ hoÃ n tÃ¡c!');
        }
        
        // Auto focus on delete button
        $(document).ready(function() {
            $('button[type="submit"]').focus();
        });
    </script>
}

@section Styles {
    <style>
        .service-image-preview {
            max-height: 200px;
            overflow: hidden;
            border-radius: 8px;
        }
        
        .service-image-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .info-item {
            padding: 8px 0;
        }
        
        .info-item label {
            display: block;
            margin-bottom: 4px;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .meta-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-top: 15px;
        }
        
        .alert-danger {
            background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
            color: #721c24;
        }
        
        .card {
            transition: all 0.3s ease;
        }
        
        .btn-lg {
            padding: 12px 30px;
            font-size: 16px;
        }
        
        .service-info h4 {
            line-height: 1.4;
        }
    </style>
} 

