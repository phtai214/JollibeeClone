@model IEnumerable<JollibeeClone.Models.Product>

@{
    ViewData["Title"] = "Quản lý Combo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">@ViewData["Title"]</h5>
                            <p class="text-sm mb-0">
                                Quản lý combo sản phẩm với tùy chọn cấu hình
                            </p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <div class="ms-auto my-auto">
                                <a href="@Url.Action("Create", "Combo")" class="btn btn-primary btn-sm mb-0">
                                    <i class="fas fa-plus"></i> Tạo combo mới
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mx-3" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-flush" id="comboTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>Ảnh</th>
                                    <th>Tên combo</th>
                                    <th>Danh mục</th>
                                    <th>Giá</th>
                                    <th>Số nhóm</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var combo in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex">
                                                @if (!string.IsNullOrEmpty(combo.ThumbnailUrl))
                                                {
                                                    <img src="@combo.ThumbnailUrl" class="avatar avatar-sm rounded-3 me-2" alt="@combo.ProductName">
                                                }
                                                else if (!string.IsNullOrEmpty(combo.ImageUrl))
                                                {
                                                    <img src="@combo.ImageUrl" class="avatar avatar-sm rounded-3 me-2" alt="@combo.ProductName">
                                                }
                                                else
                                                {
                                                    <div class="avatar avatar-sm bg-secondary rounded-3 me-2 d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-image text-white"></i>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@combo.ProductName</h6>
                                                @if (!string.IsNullOrEmpty(combo.ShortDescription))
                                                {
                                                    <p class="text-xs text-secondary mb-0">
                                                        @(combo.ShortDescription.Length > 50 ? combo.ShortDescription.Substring(0, 50) + "..." : combo.ShortDescription)
                                                    </p>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-xs">@combo.Category?.CategoryName</span>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold">@combo.Price.ToString("N0") ₫</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-sm bg-info">
                                                @combo.ProductConfigurationGroups.Count nhóm
                                            </span>
                                        </td>
                                        <td>
                                            @if (combo.IsAvailable)
                                            {
                                                <span class="badge badge-sm bg-success">Có sẵn</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-secondary">Không có sẵn</span>
                                            }
                                        </td>
                                        <td class="text-sm">
                                            <div class="d-flex align-items-center">
                                                <a href="@Url.Action("Details", "Combo", new { id = combo.ProductID })" 
                                                   class="text-secondary font-weight-bold text-xs me-2" 
                                                   data-toggle="tooltip" data-original-title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "Combo", new { id = combo.ProductID })" 
                                                   class="text-secondary font-weight-bold text-xs me-2" 
                                                   data-toggle="tooltip" data-original-title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a href="@Url.Action("Delete", "Combo", new { id = combo.ProductID })" 
                                                   class="text-secondary font-weight-bold text-xs" 
                                                   data-toggle="tooltip" data-original-title="Xóa">
                                                    <i class="fas fa-trash text-danger"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        
                        @if (!Model.Any())
                        {
                            <div class="text-center py-4">
                                <img src="~/images/empty-state.svg" alt="No data" class="img-fluid mb-3" style="max-width: 200px;">
                                <h6 class="text-muted">Chưa có combo nào</h6>
                                <p class="text-sm text-muted">Bắt đầu tạo combo đầu tiên để quản lý sản phẩm combo của bạn.</p>
                                <a href="@Url.Action("Create", "Combo")" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Tạo combo mới
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#comboTable').DataTable({
                "pageLength": 10,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
} 