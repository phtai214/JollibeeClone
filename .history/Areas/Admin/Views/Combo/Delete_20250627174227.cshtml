@model JollibeeClone.ViewModels.ComboDetailViewModel

@{
    ViewData["Title"] = "Xóa Combo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-combo.css" />

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="combo-header fade-in">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-exclamation-triangle me-3 text-warning"></i>Xóa Combo</h1>
                <p>Xác nhận xóa combo sản phẩm khỏi hệ thống</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Combo")" class="btn btn-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="combo-card">
                <div class="card-header">
                    <div class="d-lg-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0"><i class="fas fa-trash me-2"></i>Xác nhận xóa</h6>
                        </div>
                        <div class="badge bg-warning text-dark">
                            <i class="fas fa-exclamation-triangle me-1"></i>Thao tác nguy hiểm
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Warning Alert -->
                    <div class="alert alert-danger d-flex align-items-center mb-4">
                        <i class="fas fa-exclamation-triangle me-3"></i>
                        <div>
                            <strong>Cảnh báo!</strong> Bạn đang chuẩn bị xóa combo này khỏi hệ thống. 
                            Hành động này không thể hoàn tác và sẽ xóa toàn bộ cấu hình combo.
                        </div>
                    </div>

                    <!-- Combo Information -->
                    <div class="combo-info mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">@Model.ComboName</h4>
                                <p class="mb-3">@Model.ShortDescription</p>
                                <div class="d-flex gap-3 align-items-center">
                                    <span class="combo-price">@Model.ComboPrice.ToString("N0")₫</span>
                                    <span class="badge badge-custom">@Model.CategoryName</span>
                                    <span class="badge @(Model.IsAvailable ? "badge-success-custom" : "bg-secondary")">
                                        @(Model.IsAvailable ? "Có sẵn" : "Không có sẵn")
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" class="combo-image" alt="@Model.ComboName" style="width: 120px; height: 120px;">
                                }
                                else
                                {
                                    <div class="combo-image d-flex align-items-center justify-content-center bg-light" style="width: 120px; height: 120px;">
                                        <i class="fas fa-layer-group fa-3x text-muted"></i>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Configuration Summary -->
                    <div class="combo-summary mb-4">
                        <h6><i class="fas fa-info-circle me-2"></i>Thông tin cấu hình</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Số nhóm tùy chọn:</strong></p>
                                <span class="badge bg-primary">@Model.ConfigGroups.Count nhóm</span>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Tổng số món:</strong></p>
                                <span class="badge bg-info">@Model.ConfigGroups.Sum(g => g.Options.Count) món</span>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-1"><strong>Giá trung bình:</strong></p>
                                <span class="badge bg-success">@((Model.ComboPrice + Model.ConfigGroups.SelectMany(g => g.Options).Average(o => o.PriceAdjustment)).ToString("N0"))₫</span>
                            </div>
                        </div>
                    </div>

                    <!-- Configuration Groups -->
                    @if (Model.ConfigGroups.Any())
                    {
                        <div class="mb-4">
                            <h6 class="mb-3"><i class="fas fa-layer-group me-2"></i>Các nhóm sẽ bị xóa:</h6>
                            @foreach (var group in Model.ConfigGroups.OrderBy(g => g.DisplayOrder))
                            {
                                <div class="config-group mb-3">
                                    <div class="card-header">
                                        <h6 class="mb-0">
                                            <i class="fas fa-layer-group me-2"></i>
                                            @group.GroupName
                                            <small class="text-light">(@group.MinSelections-@group.MaxSelections)</small>
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var option in group.Options.OrderBy(o => o.DisplayOrder))
                                            {
                                                <div class="col-md-6 col-lg-4 mb-2">
                                                    <div class="option-item p-2">
                                                        <div class="d-flex align-items-center">
                                                            @if (!string.IsNullOrEmpty(option.CustomImageUrl))
                                                            {
                                                                <img src="@option.CustomImageUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else if (!string.IsNullOrEmpty(option.ProductThumbnailUrl))
                                                            {
                                                                <img src="@option.ProductThumbnailUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else if (!string.IsNullOrEmpty(option.ProductImageUrl))
                                                            {
                                                                <img src="@option.ProductImageUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else
                                                            {
                                                                <div class="combo-thumbnail bg-light me-2 d-flex align-items-center justify-content-center">
                                                                    <i class="fas fa-utensils"></i>
                                                                </div>
                                                            }
                                                            <div class="flex-grow-1">
                                                                <small class="fw-bold">@option.ProductName</small>
                                                                @if (!string.IsNullOrEmpty(option.VariantName))
                                                                {
                                                                    <br><small class="text-muted">@option.VariantName</small>
                                                                }
                                                                <br><small class="text-success">x@(option.Quantity)</small>
                                                                @if (option.PriceAdjustment > 0)
                                                                {
                                                                    <small class="text-warning"> (+@option.PriceAdjustment.ToString("N0")₫)</small>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Confirmation Form -->
                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProductID" method="post" class="mt-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-center">
                                    <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Bạn có chắc chắn muốn xóa combo này không? Hành động này không thể hoàn tác!')">
                                        <i class="fas fa-trash me-2"></i>Xác nhận xóa
                                    </button>
                                    <a href="@Url.Action("Details", "Combo", new { id = Model.ProductID })" class="btn btn-info btn-lg">
                                        <i class="fas fa-eye me-2"></i>Xem chi tiết
                                    </a>
                                    <a href="@Url.Action("Index", "Combo")" class="btn btn-secondary btn-lg">
                                        <i class="fas fa-times me-2"></i>Hủy bỏ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation classes
            $('.combo-card').addClass('fade-in');
            $('.config-group').each(function(index) {
                setTimeout(() => {
                    $(this).addClass('slide-up');
                }, index * 100);
            });
        });
    </script>
} 