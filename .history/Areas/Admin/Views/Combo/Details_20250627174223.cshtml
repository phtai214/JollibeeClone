@model JollibeeClone.ViewModels.ComboDetailViewModel

@{
    ViewData["Title"] = "Chi tiết Combo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/admin-combo.css" />

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="combo-header fade-in">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="fas fa-eye me-3"></i>Chi tiết Combo</h1>
                <p>Xem thông tin và cấu hình chi tiết của combo sản phẩm</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Combo")" class="btn btn-light btn-lg">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="combo-card">
                <div class="card-header">
                    <div class="d-lg-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin Combo</h6>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Edit", "Combo", new { id = Model.ProductID })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Chỉnh sửa
                            </a>
                            <a href="@Url.Action("Delete", "Combo", new { id = Model.ProductID })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Combo Information -->
                    <div class="combo-info mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h4 class="mb-2">@Model.ComboName</h4>
                                @if (!string.IsNullOrEmpty(Model.ShortDescription))
                                {
                                    <p class="mb-3">@Model.ShortDescription</p>
                                }
                                <div class="d-flex gap-3 align-items-center">
                                    <span class="combo-price">@Model.ComboPrice.ToString("N0")₫</span>
                                    <span class="badge badge-custom">@Model.CategoryName</span>
                                    <span class="badge @(Model.IsAvailable ? "badge-success-custom" : "bg-secondary")">
                                        @(Model.IsAvailable ? "Có sẵn" : "Không có sẵn")
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" class="combo-image" alt="@Model.ComboName" style="width: 150px; height: 150px;">
                                }
                                else
                                {
                                    <div class="combo-image d-flex align-items-center justify-content-center bg-light" style="width: 150px; height: 150px;">
                                        <i class="fas fa-layer-group fa-3x text-muted"></i>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl) && Model.ThumbnailUrl != Model.ImageUrl)
                                {
                                    <div class="mt-2">
                                        <small class="text-muted d-block">Thumbnail:</small>
                                        <img src="@Model.ThumbnailUrl" class="combo-thumbnail" alt="Thumbnail">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Configuration Summary -->
                    <div class="combo-summary mb-4">
                        <h6><i class="fas fa-chart-bar me-2"></i>Thống kê cấu hình</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <p class="mb-1"><strong>Số nhóm tùy chọn:</strong></p>
                                <span class="badge bg-primary">@Model.ConfigGroups.Count nhóm</span>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-1"><strong>Tổng số món:</strong></p>
                                <span class="badge bg-info">@Model.ConfigGroups.Sum(g => g.Options.Count) món</span>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-1"><strong>Số món mặc định:</strong></p>
                                <span class="badge bg-success">@Model.ConfigGroups.SelectMany(g => g.Options).Count(o => o.IsDefault) món</span>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-1"><strong>Tổng giá cộng thêm:</strong></p>
                                <span class="badge bg-warning">@Model.ConfigGroups.SelectMany(g => g.Options).Sum(o => o.PriceAdjustment).ToString("N0")₫</span>
                            </div>
                        </div>
                    </div>

                    <!-- Configuration Groups -->
                    @if (Model.ConfigGroups.Any())
                    {
                        <div class="mb-4">
                            <h6 class="mb-3"><i class="fas fa-layer-group me-2"></i>Cấu hình combo (@Model.ConfigGroups.Count nhóm)</h6>
                            @foreach (var group in Model.ConfigGroups.OrderBy(g => g.DisplayOrder))
                            {
                                <div class="config-group mb-3">
                                    <div class="card-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">
                                                <i class="fas fa-layer-group me-2"></i>
                                                @group.GroupName
                                            </h6>
                                            <div class="d-flex gap-2">
                                                <span class="badge bg-info">@group.MinSelections-@group.MaxSelections lựa chọn</span>
                                                <span class="badge bg-secondary">@group.Options.Count món</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var option in group.Options.OrderBy(o => o.DisplayOrder))
                                            {
                                                <div class="col-md-6 col-lg-4 mb-3">
                                                    <div class="option-item @(option.IsDefault ? "selected" : "")">
                                                        <div class="d-flex align-items-center mb-2">
                                                            @if (!string.IsNullOrEmpty(option.CustomImageUrl))
                                                            {
                                                                <img src="@option.CustomImageUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else if (!string.IsNullOrEmpty(option.ProductThumbnailUrl))
                                                            {
                                                                <img src="@option.ProductThumbnailUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else if (!string.IsNullOrEmpty(option.ProductImageUrl))
                                                            {
                                                                <img src="@option.ProductImageUrl" class="combo-thumbnail me-2" alt="@option.ProductName">
                                                            }
                                                            else
                                                            {
                                                                <div class="combo-thumbnail bg-light me-2 d-flex align-items-center justify-content-center">
                                                                    <i class="fas fa-utensils"></i>
                                                                </div>
                                                            }
                                                            <div class="flex-grow-1">
                                                                <h6 class="mb-0">@option.ProductName</h6>
                                                                @if (!string.IsNullOrEmpty(option.VariantName))
                                                                {
                                                                    <small class="text-muted">@option.VariantName</small>
                                                                }
                                                            </div>
                                                            @if (option.IsDefault)
                                                            {
                                                                <span class="badge bg-success">Mặc định</span>
                                                            }
                                                        </div>
                                                        
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <small class="text-muted">Số lượng:</small>
                                                                <div><strong>x@(option.Quantity)</strong></div>
                                                            </div>
                                                            <div class="col-6">
                                                                <small class="text-muted">Giá cộng thêm:</small>
                                                                <div>
                                                                    @if (option.PriceAdjustment > 0)
                                                                    {
                                                                        <span class="text-success"><strong>+@option.PriceAdjustment.ToString("N0")₫</strong></span>
                                                                    }
                                                                    else if (option.PriceAdjustment < 0)
                                                                    {
                                                                        <span class="text-danger"><strong>@option.PriceAdjustment.ToString("N0")₫</strong></span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">Miễn phí</span>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                            <h5 class="text-muted">Combo chưa có cấu hình</h5>
                            <p class="text-muted">Combo này chưa được cấu hình các nhóm và lựa chọn món ăn.</p>
                            <a href="@Url.Action("Edit", "Combo", new { id = Model.ProductID })" class="btn btn-warning">
                                <i class="fas fa-edit me-2"></i>Cấu hình ngay
                            </a>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12 d-flex gap-2 justify-content-center">
                            <a href="@Url.Action("Edit", "Combo", new { id = Model.ProductID })" class="btn btn-warning btn-lg">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa combo
                            </a>
                            <a href="@Url.Action("Delete", "Combo", new { id = Model.ProductID })" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Xóa combo
                            </a>
                            <a href="@Url.Action("Index", "Combo")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-list me-2"></i>Danh sách combo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add animation classes
            $('.combo-card').addClass('fade-in');
            $('.config-group').each(function(index) {
                setTimeout(() => {
                    $(this).addClass('slide-up');
                }, index * 100);
            });
        });
    </script>
} 