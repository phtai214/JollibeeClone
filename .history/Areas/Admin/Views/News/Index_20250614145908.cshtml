@model JollibeeClone.Models.PaginatedList<JollibeeClone.Models.News>

@{
    ViewData["Title"] = "Quản lý tin tức";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-news-service.css" asp-append-version="true" />
}

<div class="news-management">
    <!-- Header với nút Thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">
                <i class="fas fa-newspaper text-jollibee-red me-2"></i>
                Quản lý tin tức
            </h2>
            <p class="text-muted">Quản lý tất cả tin tức và khuyến mãi</p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                Thêm tin tức mới
            </a>
        </div>
    </div>

    <!-- Tìm kiếm và bộ lọc -->
    <form method="get" id="filterForm">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" name="searchString" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Tìm kiếm tin tức...">
                        </div>
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownList("newsType", ViewBag.NewsTypes as SelectList, new { @class = "form-select" })
                    </div>
                    <div class="col-md-2">
                        <select name="isPublished" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            @if (ViewBag.CurrentPublished?.ToString() == "True")
                            {
                                <option value="true" selected="selected">Đã xuất bản</option>
                            }
                            else
                            {
                                <option value="true">Đã xuất bản</option>
                            }
                            @if (ViewBag.CurrentPublished?.ToString() == "False")
                            {
                                <option value="false" selected="selected">Nháp</option>
                            }
                            else
                            {
                                <option value="false">Nháp</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="sortOrder" class="form-select">
                            @if (ViewBag.CurrentSort == null || ViewBag.CurrentSort == "")
                            {
                                <option value="" selected="selected">Mới nhất</option>
                            }
                            else
                            {
                                <option value="">Mới nhất</option>
                            }
                            @if (ViewBag.CurrentSort == "date")
                            {
                                <option value="date" selected="selected">Cũ nhất</option>
                            }
                            else
                            {
                                <option value="date">Cũ nhất</option>
                            }
                            @if (ViewBag.CurrentSort == "title_desc")
                            {
                                <option value="title_desc" selected="selected">Tiêu đề Z-A</option>
                            }
                            else
                            {
                                <option value="title_desc">Tiêu đề Z-A</option>
                            }
                            @if (ViewBag.CurrentSort == "type")
                            {
                                <option value="type" selected="selected">Theo loại</option>
                            }
                            else
                            {
                                <option value="type">Theo loại</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-secondary me-2">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> Xóa
                        </a>
                    </div>
                    <div class="col-md-1">
                        <div class="view-toggle-group">
                            <button type="button" class="btn btn-outline-secondary view-btn active" data-view="grid" title="Dạng lưới">
                                <i class="fas fa-th"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary view-btn" data-view="list" title="Dạng danh sách">
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- ThÃ´ng tin káº¿t quáº£ -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="result-count">
            Hiá»ƒn thá»‹ @((Model.PageIndex - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) cá»§a @Model.TotalCount tin tá»©c
        </div>
        <div class="pagination-info">
            Trang @Model.PageIndex / @Model.TotalPages
        </div>
    </div>

    <!-- Danh sÃ¡ch tin tá»©c -->
    @if (Model.Any())
    {
        <!-- Grid View -->
        <div id="gridView" class="view-container">
            <div class="row">
                @foreach (var news in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="news-card modern-card">
                            <div class="news-image">
                                @if (!string.IsNullOrEmpty(news.ImageUrl))
                                {
                                    <img src="@news.ImageUrl" alt="@news.Title" 
                                         onerror="this.onerror=null; this.src='/assets/images/bee.png';" />
                                }
                                else
                                {
                                    <div class="no-image">
                                        <i class="fas fa-newspaper"></i>
                                        <small class="text-muted">ChÆ°a cÃ³ áº£nh</small>
                                    </div>
                                }
                                <div class="news-overlay">
                                    <span class="badge news-type-badge @(news.NewsType == "News" ? "type-news" : "type-promotion")">
                                        <i class="fas @(news.NewsType == "News" ? "fa-newspaper" : "fa-tags") me-1"></i>
                                        @(news.NewsType == "News" ? "Tin tá»©c" : "Khuyáº¿n mÃ£i")
                                    </span>
                                    <span class="badge status-badge @(news.IsPublished ? "status-active" : "status-inactive")">
                                        <i class="fas @(news.IsPublished ? "fa-eye" : "fa-eye-slash") me-1"></i>
                                        @(news.IsPublished ? "ÄÃ£ xuáº¥t báº£n" : "NhÃ¡p")
                                    </span>
                                </div>
                            </div>
                            
                            <div class="news-content">
                                <h5 class="news-title">@news.Title</h5>
                                @if (!string.IsNullOrEmpty(news.ShortDescription))
                                {
                                    <p class="news-description">@news.ShortDescription</p>
                                }
                                
                                <div class="news-meta">
                                    <div class="meta-item">
                                        <i class="fas fa-calendar text-muted me-1"></i>
                                        <small class="text-muted">@news.PublishedDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    @if (news.Author != null)
                                    {
                                        <div class="meta-item">
                                            <i class="fas fa-user text-muted me-1"></i>
                                            <small class="text-muted">@news.Author.FullName</small>
                                        </div>
                                    }
                                </div>
                                
                                <div class="news-actions mt-3">
                                    <a href="@Url.Action("Details", new { id = news.NewsID })" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                    <a href="@Url.Action("Edit", new { id = news.NewsID })" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-edit"></i> Sá»­a
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = news.NewsID })" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i> XÃ³a
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- List View -->
        <div id="listView" class="view-container" style="display: none;">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th width="60">áº¢nh</th>
                            <th>TiÃªu Ä‘á»</th>
                            <th width="100">Loáº¡i</th>
                            <th width="120">TÃ¡c giáº£</th>
                            <th width="130">NgÃ y xuáº¥t báº£n</th>
                            <th width="80">Tráº¡ng thÃ¡i</th>
                            <th width="120">Thao tÃ¡c</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var news in Model)
                        {
                            <tr class="news-row">
                                <td>
                                    @if (!string.IsNullOrEmpty(news.ImageUrl))
                                    {
                                        <div class="table-news-image">
                                            <img src="@news.ImageUrl" alt="@news.Title" 
                                                 onerror="this.onerror=null; this.src='/assets/images/bee.png';" />
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="no-image-table">
                                            <i class="fas fa-newspaper"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="news-info">
                                        <h6 class="mb-1">@news.Title</h6>
                                        @if (!string.IsNullOrEmpty(news.ShortDescription))
                                        {
                                            <small class="text-muted">@news.ShortDescription</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge news-type-badge @(news.NewsType == "News" ? "type-news" : "type-promotion")">
                                        <i class="fas @(news.NewsType == "News" ? "fa-newspaper" : "fa-tags") me-1"></i>
                                        @(news.NewsType == "News" ? "Tin tá»©c" : "Khuyáº¿n mÃ£i")
                                    </span>
                                </td>
                                <td>
                                    @if (news.Author != null)
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-user me-1"></i>
                                            @news.Author.FullName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @news.PublishedDate.ToString("dd/MM/yyyy")<br>
                                        @news.PublishedDate.ToString("HH:mm")
                                    </small>
                                </td>
                                <td>
                                    @if (news.IsPublished)
                                    {
                                        <span class="badge status-badge status-active">
                                            <i class="fas fa-eye me-1"></i>
                                            ÄÃ£ xuáº¥t báº£n
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge status-badge status-inactive">
                                            <i class="fas fa-eye-slash me-1"></i>
                                            NhÃ¡p
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = news.NewsID })" 
                                           class="btn btn-sm btn-outline-info" title="Chi tiáº¿t">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = news.NewsID })" 
                                           class="btn btn-sm btn-outline-warning" title="Chá»‰nh sá»­a">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = news.NewsID })" 
                                           class="btn btn-sm btn-outline-danger" title="XÃ³a">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state text-center py-5">
            <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">ChÆ°a cÃ³ tin tá»©c nÃ o</h4>
            <p class="text-muted">HÃ£y báº¯t Ä‘áº§u báº±ng cÃ¡ch Thêm tin tá»©c Ä‘áº§u tiÃªn</p>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Thêm tin tá»©c má»›i
            </a>
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            page = Model.PageIndex - 1, 
                            searchString = ViewBag.CurrentSearch, 
                            newsType = ViewBag.CurrentNewsType,
                            isPublished = ViewBag.CurrentPublished,
                            sortOrder = ViewBag.CurrentSort 
                        })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            page = i, 
                            searchString = ViewBag.CurrentSearch, 
                            newsType = ViewBag.CurrentNewsType,
                            isPublished = ViewBag.CurrentPublished,
                            sortOrder = ViewBag.CurrentSort 
                        })">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            page = Model.PageIndex + 1, 
                            searchString = ViewBag.CurrentSearch, 
                            newsType = ViewBag.CurrentNewsType,
                            isPublished = ViewBag.CurrentPublished,
                            sortOrder = ViewBag.CurrentSort 
                        })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto submit form when filter changes
            $('#filterForm select').change(function() {
                $('#filterForm').submit();
            });

            // View toggle functionality
            $('.view-btn').click(function() {
                var viewType = $(this).data('view');
                
                // Update button states
                $('.view-btn').removeClass('active');
                $(this).addClass('active');
                
                // Show/hide views
                if (viewType === 'grid') {
                    $('#gridView').show();
                    $('#listView').hide();
                } else {
                    $('#gridView').hide();
                    $('#listView').show();
                }
                
                // Save preference to localStorage
                localStorage.setItem('newsViewPreference', viewType);
            });

            // Restore view preference
            var savedView = localStorage.getItem('newsViewPreference');
            if (savedView === 'list') {
                $('[data-view="list"]').click();
            }
        });
    </script>
} 

