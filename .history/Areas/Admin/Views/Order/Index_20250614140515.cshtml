    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto submit form when filter changes
            $('#filterForm select, #filterForm input[type="date"]').change(function() {
                $('#filterForm').submit();
            });

            // Refresh page every 5 minutes to get latest order updates
            setInterval(function() {
                if (!$('input:focus, select:focus').length) {
                    location.reload();
                }
            }, 300000); // 5 minutes
        });
    </script>
} 

