                    </div>
                    <div class="col-md-2">
                        <select name="sortOrder" class="form-select">
                            @if (ViewBag.CurrentSort == null || ViewBag.CurrentSort == "" || ViewBag.CurrentSort == "date_desc")
                            {
                                <option value="date_desc" selected="selected">NgÃ y má»›i nháº¥t</option>
                            }
                            else
                            {
                                <option value="date_desc">NgÃ y má»›i nháº¥t</option>
