                                                    Giáº£m: @order.DiscountAmount.ToString("N0") â‚«
                                                </small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            string statusClass = "secondary";
                                            string statusIcon = "fas fa-clock";
                                            switch (order.OrderStatusID)
                                            {
                                                case 1: // Chá» xÃ¡c nháº­n
                                                    statusClass = "warning";
                                                    statusIcon = "fas fa-clock";
                                                    break;
                                                case 2: // ÄÃ£ xÃ¡c nháº­n
                                                    statusClass = "info";
                                                    statusIcon = "fas fa-check-circle";
                                                    break;
                                                case 3: // Äang chuáº©n bá»‹
