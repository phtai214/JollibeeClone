                        @* <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i> XÃ³a
                        </a> *@
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- ThÃ´ng tin káº¿t quáº£ -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="result-count">
            Hiá»ƒn thá»‹ @((Model.PageIndex - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) cá»§a @Model.TotalCount Ä‘Æ¡n hÃ ng
        </div>
        <div class="pagination-info">
            Trang @Model.PageIndex / @Model.TotalPages
        </div>
    </div>

    <!-- Danh sÃ¡ch Ä‘Æ¡n hÃ ng -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body p-0">
