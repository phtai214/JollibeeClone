                                                    statusIcon = "fas fa-utensils";
                                                    break;
                                                case 4: // Äang giao
                                                    statusClass = "warning";
                                                    statusIcon = "fas fa-shipping-fast";
                                                    break;
                                                case 5: // ÄÃ£ giao
                                                    statusClass = "success";
                                                    statusIcon = "fas fa-check-double";
                                                    break;
                                                case 6: // ÄÃ£ há»§y
                                                    statusClass = "danger";
                                                    statusIcon = "fas fa-times-circle";
                                                    break;
                                            }
                                        }
                                        <span class="badge bg-@statusClass">
                                            <i class="@statusIcon me-1"></i>
                                            @order.OrderStatus?.StatusName
                                        </span>
                                    </td>
                                    <td>
                                        <i class="fas fa-credit-card me-1"></i>
                                        @order.PaymentMethod?.MethodName
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = order.OrderID })" class="btn btn-sm btn-outline-primary" title="Xem chi tiáº¿t">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (order.OrderStatusID != 5 && order.OrderStatusID != 6) // KhÃ´ng pháº£i Ä‘Ã£ giao hoáº·c Ä‘Ã£ há»§y
                                            {
                                                <a href="@Url.Action("UpdateStatus", new { id = order.OrderID })" class="btn btn-sm btn-outline-warning" title="Cáº­p nháº­t tráº¡ng thÃ¡i">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Order pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.PageIndex - 1, 
                                searchString = ViewBag.CurrentSearch, 
                                statusId = ViewBag.CurrentStatus,
                                fromDate = ViewBag.CurrentFromDate,
                                toDate = ViewBag.CurrentToDate,
                                sortOrder = ViewBag.CurrentSort 
                            })">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = i, 
                                searchString = ViewBag.CurrentSearch, 
                                statusId = ViewBag.CurrentStatus,
                                fromDate = ViewBag.CurrentFromDate,
                                toDate = ViewBag.CurrentToDate,
                                sortOrder = ViewBag.CurrentSort 
                            })">@i</a>
                        </li>
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.PageIndex + 1, 
                                searchString = ViewBag.CurrentSearch, 
                                statusId = ViewBag.CurrentStatus,
                                fromDate = ViewBag.CurrentFromDate,
                                toDate = ViewBag.CurrentToDate,
                                sortOrder = ViewBag.CurrentSort 
                            })">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-shopping-cart fa-3x text-muted"></i>
            </div>
            <h5 class="text-muted">KhÃ´ng tÃ¬m tháº¥y Ä‘Æ¡n hÃ ng nÃ o</h5>
            <p class="text-muted">Thá»­ thay Ä‘á»•i bá»™ lá»c Ä‘á»ƒ xem káº¿t quáº£ khÃ¡c</p>
