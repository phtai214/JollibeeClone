                            }
                            else
                            {
                                <option value="date_asc">NgÃ y cÅ© nháº¥t</option>
                            }
                            @if (ViewBag.CurrentSort == "total_desc")
                            {
                                <option value="total_desc" selected="selected">GiÃ¡ trá»‹ cao-tháº¥p</option>
                            }
                            else
                            {
                                <option value="total_desc">GiÃ¡ trá»‹ cao-tháº¥p</option>
                            }
                            @if (ViewBag.CurrentSort == "total_asc")
                            {
                                <option value="total_asc" selected="selected">GiÃ¡ trá»‹ tháº¥p-cao</option>
                            }
                            else
                            {
