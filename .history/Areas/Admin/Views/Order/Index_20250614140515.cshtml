                                <th scope="col">Tá»•ng tiá»n</th>
                                <th scope="col">Tráº¡ng thÃ¡i</th>
                                <th scope="col">PhÆ°Æ¡ng thá»©c thanh toÃ¡n</th>
                                <th scope="col">HÃ nh Ä‘á»™ng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
